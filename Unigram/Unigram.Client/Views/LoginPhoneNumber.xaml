<Page
    x:Class="Unigram.Client.Views.LoginPhoneNumber"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <EdgeUIThemeTransition Edge="Right"/>
        </TransitionCollection>
    </Page.Transitions>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel>
            <!-- Master - Titlebar -->
            <RelativePanel x:Name="rpMasterTitlebar"
                           Style="{StaticResource StyleRPMasterTitleBar}">
                <TextBlock x:Name="tblMasterTitle"
                           x:Uid="Login-Titlebar-Title"
                           Text="WELCOME TO UNIGRAM" 
                           Style="{StaticResource BaseTextBlockStyle}"
                           RequestedTheme="Dark"
                           Padding="16,0"
                           RelativePanel.AlignVerticalCenterWithPanel="True"/>
            </RelativePanel>

            <!-- Master - Main content -->
            <RelativePanel x:Name="rpMasterContent"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.Below="rpMasterTitlebar"
                           RelativePanel.AlignBottomWithPanel="True">
                <ScrollViewer RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.AlignRightWithPanel="True"
                              RelativePanel.AlignBottomWithPanel="True"
                              RelativePanel.AlignTopWithPanel="True">
                    <RelativePanel Padding="16">
                        <!-- Master - Logo and intro -->
                        <RelativePanel x:Name="rpMasterWelcomeIntro"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True">
                            <Image x:Name="imgMasterWelcomeLogo"
                                   Height="96"
                                   Width="96"                                   
                                   Source="ms-appx:///Assets/Mockups/Logos/logo.png" />
                            <TextBlock x:Name="tblMasterWelcomeIntroText"
                                       x:Uid="Login-Intro-Intro"
                                       Padding="16,0"
                                       Text="Unigram is an UWP Telegram-app build by the Windows Community, for the Windows community"
                                       TextWrapping="Wrap"
                                       FontSize="12"                               
                                       RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                       RelativePanel.RightOf="imgMasterWelcomeLogo"/>
                        </RelativePanel>


                        <!-- Master - Phone Number -->
                        <RelativePanel x:Name="rpMasterPhone"
                                       Visibility="Visible"
                                       Padding="0,16,0,0"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.Below="rpMasterWelcomeIntro">
                            <TextBlock x:Name="tblMasterPhoneTitle"
                                       x:Uid="Login-PhoneNumber-Title"
                                       Text="Your phone number"
                                       Style="{StaticResource TitleTextBlockStyle}"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.AlignTopWithPanel="True"/>
                            <TextBlock x:Name="tblMasterPhoneIntro"
                                       x:Uid="Login-PhoneNumber-Intro"
                                       Text="Please select the country you live in and enter your phone number"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       Padding="0,8,0,0"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.Below="tblMasterPhoneTitle" />                            
                            <RelativePanel x:Name="rpMasterPhoneInput"
                                           Padding="0,0,0,0"
                                           RelativePanel.AlignLeftWithPanel="True"
                                           RelativePanel.AlignRightWithPanel="True"
                                           RelativePanel.Below="tblMasterPhoneIntro">
                                <!-- The user can select his/her country here -->
                                <ComboBox x:Name="cboxMasterPhoneInputCounty"
                                          x:Uid="Login-PhoneNumber-CountryInput"
                                          Header="Country:"
                                          PlaceholderText="Select your country..."
                                          Margin="0,16,0,0"
                                          RelativePanel.AlignLeftWithPanel="True"
                                          RelativePanel.AlignRightWithPanel="True"
                                          RelativePanel.AlignTopWithPanel="True">
                                    <!-- Temporary CBox items-->
                                    <ComboBoxItem Content="+31 - Netherlands"/>
                                    <ComboBoxItem Content="+91 - India"/>                                 
                                </ComboBox>
                                
                                <!-- The user can enter their phone number here -->
                                <TextBox x:Name="txtMasterPhoneInputPhoneNumber"
                                         x:Uid="Login-PhoneNumber-PhoneNumber"
                                         Margin="0,16,0,0"
                                         Header="Phone number:"
                                         PlaceholderText="What's your phone number?" 
                                         RelativePanel.AlignLeftWithPanel="True"
                                         RelativePanel.AlignRightWithPanel="True"
                                         RelativePanel.Below="cboxMasterPhoneInputCounty"/>
                                <Button x:Name="btnMasterPhoneInputConfirm"
                                        x:Uid="BTN-Next"
                                        Background="{StaticResource SystemControlBackgroundAccentBrush}"
                                        RequestedTheme="Dark"
                                        Content="Next"
                                        Padding="24,6"
                                        Margin="0,16,0,0"
                                        RelativePanel.Below="txtMasterPhoneInputPhoneNumber"
                                        Click="btnMasterPhoneInputConfirm_Click"/>
                            </RelativePanel>
                        </RelativePanel>
                        <!-- END OF Master - Phone Number -->




                    </RelativePanel>
                </ScrollViewer>






            </RelativePanel>


        </RelativePanel>
    </Grid>
</Page>
