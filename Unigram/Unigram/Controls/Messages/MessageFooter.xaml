<ContentPresenter
    x:Class="Unigram.Controls.Messages.MessageFooter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Unigram.Controls.Messages"
    mc:Ignorable="d"
    Background="Transparent"
    CornerRadius="{ThemeResource MessageOverlayCornerRadius}"
    Foreground="{ThemeResource MessageSubtleLabelBrush}"
    VerticalAlignment="Bottom"
    HorizontalAlignment="Right"
    Padding="6,0,6,0">

    <TextBlock x:Name="Label" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Style="{StaticResource CaptionTextBlockStyle}">
        <ToolTipService.ToolTip>
            <ToolTip Opened="ToolTip_Opened"/>
        </ToolTipService.ToolTip>
        <Run x:Name="RepliesGlyph" FontSize="10" FontFamily="{StaticResource TelegramThemeFontFamily}"/><Run x:Name="RepliesLabel"/><Run x:Name="ViewsGlyph" FontSize="10" FontFamily="{StaticResource TelegramThemeFontFamily}"/><Run x:Name="ViewsLabel" FontFamily="{ThemeResource EmojiThemeFontFamily}"/><Run x:Name="EditedLabel" FontStyle="Italic"/><Run x:Name="DateLabel"/><Run x:Name="StateLabel" FontSize="10" FontFamily="{StaticResource TelegramThemeFontFamily}"/>
    </TextBlock>
</ContentPresenter>
