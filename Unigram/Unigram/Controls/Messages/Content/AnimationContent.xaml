<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Controls.Messages.Content"
    xmlns:controls="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Style TargetType="local:AnimationContent">
        <Setter Property="MinWidth" Value="{ThemeResource TelegramMediaMinWidth}"/>
        <Setter Property="MinHeight" Value="{ThemeResource TelegramMediaMinHeight}"/>
        <Setter Property="MaxWidth" Value="{ThemeResource TelegramMediaMaxWidth}"/>
        <Setter Property="MaxHeight" Value="{ThemeResource TelegramMediaMaxHeight}"/>
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AnimationContent">
                    <controls:AspectView x:Name="LayoutRoot" Background="Black">
                        <Image
                            x:Name="Texture"
                            Stretch="UniformToFill"/>
    
                        <controls:FileButton
                            x:Name="Button"
                            Style="{StaticResource ImmersiveFileButtonStyle}"/>

                        <Border>
                            <controls:AnimationView
                                x:Name="Player"
                                AutoPlay="False"
                                LimitFps="False"
                                IsHitTestVisible="False"/>
                        </Border>

                        <Border x:Name="Overlay" Background="{ThemeResource MessageOverlayBackgroundBrush}" CornerRadius="{ThemeResource MessageOverlayCornerRadius}" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="8,4,8,4" Margin="4">
                            <TextBlock x:Name="Subtitle" Style="{StaticResource CaptionTextBlockStyle}" Foreground="White" TextAlignment="Right" TextWrapping="NoWrap"/>
                        </Border>
                    </controls:AspectView>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
