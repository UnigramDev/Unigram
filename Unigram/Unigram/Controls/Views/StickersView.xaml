                                             <controls:ChannelStickersButton Click="GroupStickers_Click" StickerSet="{x:Bind}" Glyph="&#xE115;" FontSize="16" Height="32" Margin="0,-8,-12,-8" Grid.Column="1"/>
                                             </Grid>
                                             </DataTemplate>
                                             </selectors:StickerSetTemplateSelector.GroupTemplate>
