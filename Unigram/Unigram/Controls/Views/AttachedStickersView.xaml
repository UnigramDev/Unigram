<controls:ContentDialogBase
    x:Class="Unigram.Controls.Views.AttachedStickersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Controls.Views"
    xmlns:behaviors="using:Unigram.Behaviors"
    xmlns:common="using:Unigram.Common"
    xmlns:selectors="using:Unigram.Selectors"
    xmlns:controls="using:Unigram.Controls"
    xmlns:tl="using:Telegram.Api.TL"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    VerticalAlignment="Stretch"
    Background="Transparent"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <controls:ContentDialogBase.Resources>
        <CollectionViewSource x:Name="ViewSource" Source="{x:Bind ViewModel.Items}" ItemsPath="Covers" IsSourceGrouped="True"/>
    </controls:ContentDialogBase.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border x:Name="BackgroundPanel"/>

        <controls:ZoomableGridView
            x:Name="List"
            ItemsSource="{x:Bind ViewSource.View}"
            ItemClick="List_ItemClick"
            IsItemClickEnabled="True"
            SelectionMode="None"
            Padding="12,0"
            Loaded="GridView_Loaded"
            SizeChanged="List_SizeChanged"
            common:FluidGridView.OrientationOnly="False">
            <common:FluidGridView.Triggers>
                <common:FluidGridViewTrigger RowsOrColumns="5"/>
            </common:FluidGridView.Triggers>
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="tl:TLDocument">
                    <Border Margin="2">
                        <Image x:Phase="3" Source="{x:Bind Converter={StaticResource DefaultPhotoConverter}, ConverterParameter=thumbnail}"/>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.Header>
                <Border x:Name="Header" Background="Transparent" Tapped="LightDismiss_Tapped"/>
            </GridView.Header>
            <GridView.Footer>
                <Border Height="12"/>
            </GridView.Footer>
            <GridView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate x:DataType="tl:TLStickerSetMultiCovered">
                            <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                                  Height="{ThemeResource AppBarThemeCompactHeight}" 
                                  Loaded="GroupHeader_Loaded"
                                  VerticalAlignment="Bottom" 
                                  Margin="-12,0">
                                <Border x:Name="LineAccent" BorderBrush="{ThemeResource SystemControlForegroundAccentBrush}" IsHitTestVisible="False" Grid.RowSpan="2"/>

                                <Grid Margin="0,8,0,0" Height="{ThemeResource AppBarThemeCompactHeight}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Set.Title}" VerticalAlignment="Bottom" Margin="12,0" Style="{StaticResource BaseTextBlockStyle}"/>
                                    <TextBlock Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" VerticalAlignment="Top" Margin="12,0" Style="{StaticResource BodyTextBlockStyle}" Grid.Row="1">
                                        <Run Text="{x:Bind Set.Count}"/>
                                        <Run Text="stickers"/>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                    <GroupStyle.HeaderContainerStyle>
                        <Style TargetType="GridViewHeaderItem">
                            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAltMediumHighBrush}" />
                            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
                            <Setter Property="FontSize" Value="{ThemeResource ListViewHeaderItemThemeFontSize}" />
                            <Setter Property="Margin" Value="0,0,0,0"/>
                            <Setter Property="Padding" Value="0,0,0,0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Top" />
                            <Setter Property="MinHeight" Value="0"/>
                            <Setter Property="UseSystemFocusVisuals" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewHeaderItem">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter x:Name="ContentPresenter"
                                                              Margin="{TemplateBinding Padding}"
                                                              Content="{TemplateBinding Content}"
                                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.HeaderContainerStyle>
                </GroupStyle>
            </GridView.GroupStyle>
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemContainerTransitions>
                <TransitionCollection/>
            </GridView.ItemContainerTransitions>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" GroupPadding="0,0,0,12" AreStickyGroupHeadersEnabled="False"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </controls:ZoomableGridView>

        <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!--<ColumnDefinition Width="3*"/>
                     <ColumnDefinition Width="2*"/>-->
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border x:Name="LineBottom" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" IsHitTestVisible="False" Grid.ColumnSpan="2"/>

            
            <!--<Button Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"
                 HorizontalAlignment="Stretch" 
                 HorizontalContentAlignment="Left" 
                 Margin="12,8,4,8">
                 <StackPanel Orientation="Horizontal">
                 <Grid Background="{ThemeResource SystemControlForegroundAccentBrush}"
                 MinWidth="20"
                 Height="20"
                 CornerRadius="10"
                 Margin="0,0,8,0">
                 <TextBlock Text="{x:Bind ViewModel.StickerSet.Count, Mode=OneWay}"
                 Style="{ThemeResource CaptionTextBlockStyle}"
                 Foreground="{ThemeResource TelegramDialogUnreadLabelBrush}"
                 TextAlignment="Center"
                 Margin="4,2,4,0"/>
                 </Grid>
                 
                 
                 <TextBlock Text="Add stickers"/>
                 </StackPanel>
                 </Button>-->

            <Button Click="Close_Click" Content="Close" HorizontalAlignment="Stretch" Margin="4,8,12,8" Padding="24,4,24,4" Grid.Column="1"/>
        </Grid>
    </Grid>
</controls:ContentDialogBase>
