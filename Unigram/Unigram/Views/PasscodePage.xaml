<controls:ContentPopup x:Class="Unigram.Views.PasscodePage"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="using:Unigram.Views"
                       xmlns:controls="using:Unigram.Controls"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       mc:Ignorable="d"
                       TitleTemplate="{x:Null}"
                       IsFullWindow="True"
                       Loaded="OnLoaded"
                       Unloaded="OnUnloaded"
                       Closing="OnClosing">

    <ContentDialog.Style>
        <Style TargetType="ContentDialog">
            <Setter Property="Foreground"
                    Value="{ThemeResource ContentDialogForeground}" />
            <Setter Property="Background"
                    Value="{ThemeResource ContentDialogBackground}" />
            <Setter Property="BorderBrush"
                    Value="{ThemeResource ContentDialogBorderBrush}" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Top" />
            <Setter Property="IsTabStop"
                    Value="False" />
            <Setter Property="MaxHeight"
                    Value="0" />
            <Setter Property="MinHeight"
                    Value="0" />
            <Setter Property="MaxWidth"
                    Value="{ThemeResource ContentDialogMaxWidth}" />
            <Setter Property="MinWidth"
                    Value="{ThemeResource ContentDialogMinWidth}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentDialog">
                        <ContentPresenter x:Name="Content"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Content="{TemplateBinding Content}"
                                          FontSize="{ThemeResource ControlContentThemeFontSize}"
                                          FontFamily="{ThemeResource ContentControlThemeFontFamily}"
                                          Margin="{ThemeResource ContentDialogContentMargin}"
                                          Foreground="{TemplateBinding Foreground}"
                                          TextWrapping="Wrap" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentDialog.Style>

    <Grid x:Name="LayoutRoot"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,-120,0,0"
                    Grid.Row="1">

            <controls:ProfilePicture x:Name="Photo"
                                     Width="120"
                                     Height="120"
                                     Margin="0,0,0,12"
                                     HorizontalAlignment="Center">
                <controls:ProfilePicture.Source>
                    <BitmapImage UriSource="ms-appx:///Assets/Images/BoxArt.png"
                                 DecodePixelWidth="120"
                                 DecodePixelHeight="120" />
                </controls:ProfilePicture.Source>
            </controls:ProfilePicture>

            <TextBlock x:Name="FullName"
                       Text="{CustomResource AppName}"
                       TextAlignment="Center"
                       Margin="0,0,0,24"
                       Style="{StaticResource TitleTextBlockStyle}" />

            <Grid x:Name="FieldPanel"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="296">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border x:Name="Biometrics"
                        Background="{ThemeResource TinyButtonBackgroundBrush}"
                        Visibility="Collapsed"
                        Width="32"
                        Height="32"
                        CornerRadius="16"
                        Margin="0,0,8,0">
                    <controls:GlyphButton Glyph="&#xE904;"
                                          Click="Biometrics_Click"
                                          AutomationProperties.Name="{CustomResource UnlockFingerprint}"
                                          ToolTipService.ToolTip="{CustomResource UnlockFingerprint}"
                                          Style="{StaticResource RoundGlyphButtonStyle}"
                                          Foreground="#FFFFFF"
                                          Width="32"
                                          Height="32"
                                          CornerRadius="16"
                                          Padding="0,0,0,0" />
                </Border>

                <PasswordBox x:Name="Field"
                             PlaceholderText="{CustomResource EnterYourPasscode}"
                             InputScope="NumericPin"
                             PasswordChanged="Field_TextChanged"
                             KeyDown="Field_KeyDown"
                             LosingFocus="Field_LosingFocus"
                             Grid.Column="1" />

                <Border Background="{ThemeResource TinyButtonBackgroundBrush}"
                        Width="32"
                        Height="32"
                        CornerRadius="16"
                        Margin="8,0,0,0"
                        Grid.Column="2">
                    <controls:GlyphButton Glyph="&#xE72A;"
                                          Click="Enter_Click"
                                          AutomationProperties.Name="{CustomResource AccDescrPasscodeUnlock}"
                                          ToolTipService.ToolTip="{CustomResource AccDescrPasscodeUnlock}"
                                          Style="{StaticResource RoundGlyphButtonStyle}"
                                          Foreground="#FFFFFF"
                                          Width="32"
                                          Height="32"
                                          CornerRadius="16"
                                          Padding="0,0,0,0" />
                </Border>
            </Grid>
        </StackPanel>

        <Border Width="296"
                Grid.Row="2">
            <TextBlock x:Name="RetryIn"
                       Visibility="Collapsed"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource DangerButtonBackground}"
                       Margin="0,4,0,0" />
        </Border>
    </Grid>
</controls:ContentPopup>
