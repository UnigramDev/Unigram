                                                    x:Name="ArchivedChats"
                                                    Click="ArchivedChats_Click"
                                                    ContextRequested="ArchivedChats_ContextRequested"
                                                    Visibility="Collapsed"
                                                    Stroke="{ThemeResource ChatLastMessageStateBrush}"
                                                    SelectionStroke="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                                    Accent="{ThemeResource SystemAccentColor}" />
                                            </Border>
                                            <Border Visibility="{x:Bind ViewModel.CollapseArchivedChats, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <cells:ChatCell
                                                    Content="{CustomResource ArchivedChats}"
                                                    Click="ArchivedChats_Click"
                                                    ContextRequested="ArchivedChats_ContextRequested"
                                                    Visibility="{x:Bind ArchivedChats.Visibility, Mode=OneWay}"
                                                    Padding="12,6"/>
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                </ListView.Header>
                            </local:ChatsPage>

                            <Grid x:Name="Arrow"
                                  Margin="12,12"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
