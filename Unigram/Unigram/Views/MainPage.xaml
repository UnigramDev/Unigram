<Page
    x:Class="Unigram.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Views"
    xmlns:controls="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="20"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <Style TargetType="PivotItem">
            <Setter Property="Margin" Value="0" />
        </Style>
    </Page.Resources>

    <controls:MasterDetailView x:Name="MasterDetail" ViewStateChanged="OnStateChanged">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <RelativePanel x:Name="rpMaster"
                           Grid.Column="0"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch">
                <Pivot x:Name="rpMasterTitlebar" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignTopWithPanel="True" Margin="0,0,0,48" Style="{StaticResource TabStylePivotStyle}">
                    <PivotItem>
                        <PivotItem.Header>
                            <controls:TabHeaderStyle Glyph="&#xE15F;" />
                        </PivotItem.Header>
                        <ListView x:Name="lvMasterChats"
                            ItemsSource="{x:Bind ViewModel.Dialogs}"
                            IsItemClickEnabled="True"
                            SelectionMode="None"
                            ItemClick="ListView_ItemClick"
                            SelectionChanged="ListView_SelectionChanged"
                            Grid.Row="1">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <controls:DialogListViewItem />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </PivotItem>
                    <PivotItem>
                        <PivotItem.Header>
                            <controls:TabHeaderStyle Glyph="&#xE125;" />
                        </PivotItem.Header>
                    </PivotItem>
                    <PivotItem>
                        <PivotItem.Header>
                            <controls:TabHeaderStyle Glyph="&#xE11A;" />
                        </PivotItem.Header>
                    </PivotItem>
                </Pivot>

                <StackPanel Orientation="Horizontal">
                    <controls:UnigramLogo VerticalAlignment="Center" Margin="12,0,0,0" Width="36" Height="36" LogoColor="{ThemeResource ButtonForegroundThemeBrush}"/>
                    <TextBlock x:Name="tblMasterTitle"
                               Text="UNIGRAM"
                               Foreground="{ThemeResource ButtonForegroundThemeBrush}"
                               HorizontalAlignment="Center"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Padding="7,14" 
                               />
                </StackPanel>

                <!-- Master - Command Bar -->
                <CommandBar x:Name="cmbarMaster"
                                RelativePanel.AlignLeftWithPanel="True"
                                RelativePanel.AlignRightWithPanel="True"
                                RelativePanel.AlignBottomWithPanel="True">
                    <!-- Commands visible on commandbar-->
                    <CommandBar.PrimaryCommands>
                        
                        <AppBarButton x:Name="cbtnMasterNewChat"
                                          x:Uid="CBTN-NewChat"
                                          Icon="Add"
                                          Label="New chat">
                        </AppBarButton>
                        <AppBarButton x:Name="cbtnMasterSelectAll"
                                          x:Uid="CBTN-SelectAll"
                                          Icon="SelectAll"
                                          Label="Select all"
                                          Click="cbtnMasterSelectAll_Click">
                        </AppBarButton>
                        <AppBarButton x:Name="cbtnMasterSearch"
                                          x:Uid="CBTN-NewChat"
                                          Icon="Find"
                                          Label="Search TEST"
                                          Click="cbtnMasterSearch_Click">
                        </AppBarButton>
                        <AppBarButton x:Name="cbtnMasterDeleteSelected" 
                                          x:Uid="CBTN-SelectAll"
                                          Icon="Delete"
                                          Label="Delete selected"
                                      Visibility="Collapsed">
                        </AppBarButton>
                        <AppBarButton x:Name="cbtnMasterMuteSelected" 
                                          x:Uid="CBTN-MuteSelected"
                                          Icon="Mute"
                                          Label="Mute selected"
                                      Visibility="Collapsed">
                        </AppBarButton>
                    </CommandBar.PrimaryCommands>

                    <!-- Commands hidden in the ellipse-menu -->
                    <CommandBar.SecondaryCommands>
                        <AppBarButton x:Name="cbtnMasterSettings"
                                          x:Uid="CBTN-Settings"
                                          Icon="Setting"
                                          Label="Settings">
                        </AppBarButton>
                        <AppBarButton x:Name="cbtnMasterAbout"
                                          x:Uid="CBTN-About"
                                          Label="About"
                                          Click="cbtnMasterAbout_Click">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xE946;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </RelativePanel>
        </Grid>
    </controls:MasterDetailView>
</Page>
