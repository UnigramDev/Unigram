        </controls:MasterDetailView>

        <controls:ConfettiView
            x:Name="Confetti"
            x:Load="False"
            Completed="Confetti_Completed"
            IsHitTestVisible="False"
            Grid.ColumnSpan="2"
            Grid.Row="1"/>
    </Grid>
