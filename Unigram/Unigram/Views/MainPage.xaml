<Page
    x:Class="Unigram.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Views"
    xmlns:controls="using:Unigram.Controls"
    xmlns:items="using:Unigram.Controls.Items"
    xmlns:models="using:Telegram.Api.TL"
    xmlns:vms="using:Unigram.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="20"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <Style TargetType="PivotItem">
            <Setter Property="Margin" Value="0" />
        </Style>
    </Page.Resources>

    <controls:MasterDetailView x:Name="MasterDetail" ViewStateChanged="OnStateChanged">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border x:Name="Separator" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" Grid.Row="1"/>
            <Pivot x:Name="rpMasterTitlebar" 
                   Style="{StaticResource TabStylePivotStyle}"
                   Grid.RowSpan="2">
                <PivotItem>
                    <PivotItem.Header>
                        <controls:TabHeaderStyle Glyph="&#xE15F;"/>
                    </PivotItem.Header>
                    <ListView x:Name="lvMasterChats"
                        ItemsSource="{x:Bind ViewModel.Dialogs}"
                        IsItemClickEnabled="True"
                        SelectionMode="None"
                        ItemClick="ListView_ItemClick"
                        SelectionChanged="ListView_SelectionChanged"
                        Grid.Row="1">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <items:DialogListViewItem />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Header>
                            <controls:SearchTextBox x:Name="txtSearch" 
                                                    Margin="12,8" 
                                                    PlaceholderText="Search messages or users"
                                                    TextChanged="txtSearch_TextChanged"/>
                        </ListView.Header>
                        <ListView.Footer>
                            <Border Height="6"/>
                        </ListView.Footer>
                    </ListView>
                </PivotItem>
                <PivotItem Loaded="PivotItem_Loaded">
                    <PivotItem.Header>
                        <controls:TabHeaderStyle Glyph="&#xE125;"/>
                    </PivotItem.Header>
                    <ListView x:Name="UsersListView"
                              ItemsSource="{x:Bind ViewModel.Contacts.Items}"
                              Header="{x:Bind ViewModel.Contacts.Self, Mode=OneWay}"
                              SelectionChanged="UsersListView_SelectionChanged">
                        <ListView.HeaderTemplate>
                            <DataTemplate x:DataType="vms:UsersPanelListItem">
                                <Border Margin="0,0,0,8" Background="{ThemeResource CommandBarOverflowPresenterBackground}">
                                    <Button Click="Self_Click" Style="{StaticResource EmptyButtonStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Background="{x:Bind PlaceHolderColor}" Height="64" Width="64" CornerRadius="32" Margin="12" Grid.RowSpan="2">
                                                <TextBlock Foreground="White" x:Name="InitialName" Text="{Binding Converter={StaticResource InitialNameStringConverter}}" VerticalAlignment="Center" TextAlignment="Center"/>
                                                <Ellipse>
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{x:Bind Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <Border BorderBrush="#26000000" BorderThickness="1" CornerRadius="32"/>
                                            </Grid>
                                            <TextBlock Text="{x:Bind _parent.FullName}" Style="{StaticResource SubtitleTextBlockStyle}" VerticalAlignment="Bottom" Grid.Column="1"/>
                                            <TextBlock Text="{x:Bind _parent.Phone}" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
                                        </Grid>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vms:UsersPanelListItem">
                                <Grid Margin="0,4,0,8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Background="{x:Bind PlaceHolderColor}" Width="36" Height="36" CornerRadius="18" Margin="0,0,12,0" Grid.RowSpan="2">
                                        <TextBlock Foreground="White" Text="{Binding Converter={StaticResource InitialNameStringConverter}}" VerticalAlignment="Center" TextAlignment="Center"/>
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{x:Bind _parent.Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Border BorderBrush="#26000000" BorderThickness="1" CornerRadius="24" Width="36" Height="36" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="1"/>
                                    </Grid>
                                    <TextBlock Text="{x:Bind fullName}" Grid.Column="1" VerticalAlignment="Bottom" Grid.Row="0"/>
                                    <TextBlock Text="{x:Bind lastSeen}" Grid.Column="1" VerticalAlignment="Top" Grid.Row="1"
                                               Style="{StaticResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                               TextTrimming="CharacterEllipsis" 
                                               TextWrapping="NoWrap" 
                                               MaxLines="1"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </PivotItem>
            </Pivot>

