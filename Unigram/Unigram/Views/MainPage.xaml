                                <Ellipse x:Name="ArrowShadow" Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="36" Height="36"/>
                                <Border Background="{ThemeResource PageSubHeaderBackgroundBrush}"
                                        CornerRadius="18"
                                        Height="36"
                                        Width="36">
                                    <controls:GlyphButton
                                        Click="Arrow_Click"
                                        FontSize="16"
                                        Width="36"
                                        Height="36"
                                        Glyph="&#xE74A;"
                                        Radius="24"
                                        AutomationProperties.Name="{CustomResource AccDescrPageDown}"
                                        ToolTipService.ToolTip="{CustomResource AccDescrPageDown}"/>
                                </Border>
                            </Grid>

                            <Grid x:Name="FolderPanel" Visibility="Collapsed">
                                <Border x:Name="FolderShadow" Background="{ThemeResource MessageOverlayBackgroundBrush}"/>
                                <local:ChatsPage
                                    x:Name="FolderList"
                                    AutomationProperties.LandmarkType="Main"
                                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                    DataContext="{x:Bind ViewModel.Folder, Mode=OneWay}"
                                    ItemsSource="{x:Bind ViewModel.Folder.Items, Mode=OneWay}"
                                    SelectionMode2="{x:Bind ViewModel.Folder.SelectionMode, Mode=TwoWay}"/>
                            </Grid>

                            <controls:UndoView x:Name="Undo" VerticalAlignment="Bottom"/>

