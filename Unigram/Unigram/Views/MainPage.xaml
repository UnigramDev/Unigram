                                        RadiusX="18"
                                        RadiusY="18"/>
                                    <controls:BadgeButton
                                        x:Name="UpdateCloud"
                                        Command="{x:Bind ViewModel.UpdateAppCommand}"
                                        Visibility="{x:Bind ViewModel.IsUpdateAvailable, Mode=OneWay}"
                                        Content="{CustomResource UpdateTelegram}"
                                        Style="{StaticResource StartButtonStyle}"
                                        Padding="16,3,16,5"
                                        Radius="18"
                                        Margin="0"
                                        Height="36"/>
                                </Grid>

                                <controls:UndoView x:Name="Undo" VerticalAlignment="Bottom" Grid.Row="1"/>
                            </Grid>
                        </Grid>
