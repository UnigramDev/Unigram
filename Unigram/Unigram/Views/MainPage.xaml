                </Pivot.LeftHeader>
                <Pivot.RightHeader>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{ThemeResource AppBarExpandButtonThemeWidthGridLength}"/>
                            <ColumnDefinition Width="{ThemeResource AppBarExpandButtonThemeWidthGridLength}"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnOptions"
                                Padding="16,23,16,0"
                                Style="{StaticResource EllipsisButton}"
                                Grid.Column="1">
                            <FontIcon x:Name="EllipsisIcon"
                                      VerticalAlignment="Center"
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      FontSize="16"
                                      Glyph="&#xE10C;"
                                      Height="{ThemeResource AppBarExpandButtonCircleDiameter}" />
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Style="{StaticResource IconMenuFlyoutItem}"
                                                    IsEnabled="False"
                                                    Tag="&#xE125;"
                                                    Text="New Group" />
                                    <MenuFlyoutItem Style="{StaticResource IconMenuFlyoutItem}"
                                                    IsEnabled="False"
                                                    Tag="&#xE789;"
                                                    Text="New Channel" />
                                    <MenuFlyoutItem Style="{StaticResource IconMenuFlyoutItem}"
                                                    Click="cbtnMasterSettings_Click"
                                                    Tag="&#xE115;"
                                                    Text="Settings"/>
                                    <MenuFlyoutItem Style="{StaticResource IconMenuFlyoutItem}"
                                                    Click="cbtnMasterAbout_Click"
                                                    Tag="&#xE11B;"
                                                    Text="About"/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>

                    </Grid>
                </Pivot.RightHeader>
                <PivotItem Header="Chats">                    
                    <!--<PivotItem.Header>
                         <controls:TabHeaderStyle Glyph="&#xE15F;"/>
                         </PivotItem.Header>-->
                    <Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>                           
                            <Grid Background="{ThemeResource TelegramBackgroundSubtitleBarBrush}">
                                <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,8">
                                    <controls:SearchTextBox x:Name="SearchDialogs" 
                                                            PlaceholderText="Search chats and messages"
                                                            TextChanged="txtSearch_TextChanged"
                                                            Margin="0"/>
                                </Border>

                                <Border BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" IsHitTestVisible="False" VerticalAlignment="Bottom" BorderThickness="0,0,0,1"/>
                            </Grid>
                            
                            <controls:DialogsListView x:Name="DialogsListView"
                                                      ItemsSource="{x:Bind ViewModel.Dialogs.Items}"
                                                      IsItemClickEnabled="True"
                                                      SelectionMode="None"
                                                      ItemClick="ListView_ItemClick"
                                                      SelectionChanged="ListView_SelectionChanged"                                                  
                                                      AllowDrop="True"
                                                      CanDragItems="True"                                                  
                                                      Grid.Row="1">
                                <ListView.ItemContainerStyleSelector>
                                    <selectors:DialogStyleSelector>
                                        <selectors:DialogStyleSelector.DialogStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </selectors:DialogStyleSelector.DialogStyle>
                                        <selectors:DialogStyleSelector.PinnedStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                <Setter Property="Background" Value="{ThemeResource TelegramBackgroundSubtitleBarBrush}" />
                                            </Style>
                                        </selectors:DialogStyleSelector.PinnedStyle>
                                    </selectors:DialogStyleSelector>
                                </ListView.ItemContainerStyleSelector>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <items:DialogListViewItem ContextFlyout="{StaticResource DialogMenuFlyout}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.Footer>
                                    <Border Height="6"/>
                                </ListView.Footer>
                            </controls:DialogsListView>
                        </Grid>
                        <ListView x:Name="DialogsSearchListView"
                                  Margin="0,48,0,0" 
                                  Visibility="Collapsed"
                                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                  ItemsSource="{Binding Source={StaticResource SearchResults}}"
                                  IsItemClickEnabled="True"
                                  SelectionMode="None"
                                  ItemClick="ListView_ItemClick"
                                  SelectionChanged="ListView_SelectionChanged">
                            <ListView.ItemTemplateSelector>
                                <selectors:SearchTemplateSelector>
                                    <selectors:SearchTemplateSelector.UserTemplate>
                                        <DataTemplate x:DataType="models:TLUser">
                                            <Grid Margin="0,4,0,8">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Background="{x:Bind Id, Converter={StaticResource BubblePlaceholderConverter}}" Width="36" Height="36" CornerRadius="18" Margin="0,0,12,0" Grid.RowSpan="2">
                                                    <TextBlock Foreground="White" Text="{x:Bind Converter={StaticResource InitialNameStringConverter}}" VerticalAlignment="Center" TextAlignment="Center"/>
                                                    <Ellipse>
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{x:Bind Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Border BorderBrush="#26000000" BorderThickness="1" CornerRadius="24" Width="36" Height="36" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="1"/>
                                                </Grid>
                                                <TextBlock Text="{x:Bind FullName}" Grid.Column="1" VerticalAlignment="Bottom" Grid.Row="0"/>
                                                <TextBlock Text="{x:Bind Username}"
                                                           VerticalAlignment="Top" 
                                                           Style="{StaticResource CaptionTextBlockStyle}" 
                                                           Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                                           TextTrimming="CharacterEllipsis" 
                                                           TextWrapping="NoWrap" 
                                                           Grid.Column="1"
                                                           Grid.Row="1"
                                                           MaxLines="1">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:UsernameHighlightBehavior SearchString="{Binding ElementName=SearchDialogs, Path=DataContext.Dialogs.SearchQuery}" HighlightBrush="{ThemeResource TelegramDialogLabelFromBrush}"/>
                                                    </i:Interaction.Behaviors>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </selectors:SearchTemplateSelector.UserTemplate>
                                    <selectors:SearchTemplateSelector.ChannelTemplate>
                                        <DataTemplate x:DataType="models:TLChannel">
                                            <Grid Margin="0,6">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Background="{x:Bind Id, Converter={StaticResource BubblePlaceholderConverter}}" Width="36" Height="36" CornerRadius="18" Margin="0,0,12,0" Grid.RowSpan="2">
                                                    <TextBlock Foreground="White" Text="{x:Bind Converter={StaticResource InitialNameStringConverter}}" VerticalAlignment="Center" TextAlignment="Center"/>
                                                    <Ellipse>
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{x:Bind Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Border BorderBrush="#26000000" BorderThickness="1" CornerRadius="24" Width="36" Height="36" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="1"/>
                                                </Grid>
                                                <TextBlock Text="{x:Bind FullName}" Grid.Column="1" VerticalAlignment="Bottom" Grid.Row="0"/>
                                                <TextBlock Text="{x:Bind Username}"
                                                           VerticalAlignment="Top" 
                                                           Style="{StaticResource CaptionTextBlockStyle}" 
                                                           Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                                           TextTrimming="CharacterEllipsis" 
                                                           TextWrapping="NoWrap" 
                                                           Grid.Column="1"
                                                           Grid.Row="1"
                                                           MaxLines="1">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:UsernameHighlightBehavior SearchString="{Binding ElementName=SearchDialogs, Path=DataContext.Dialogs.SearchQuery}" HighlightBrush="{ThemeResource TelegramDialogLabelFromBrush}"/>
                                                    </i:Interaction.Behaviors>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </selectors:SearchTemplateSelector.ChannelTemplate>
                                    <selectors:SearchTemplateSelector.ChannelForbiddenTemplate>
                                        <DataTemplate x:DataType="models:TLChannelForbidden">
                                            <Grid Margin="0,6">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Background="{x:Bind Id, Converter={StaticResource BubblePlaceholderConverter}}" Width="36" Height="36" CornerRadius="18" Margin="0,0,12,0" Grid.RowSpan="2">
                                                    <TextBlock Foreground="White" Text="{x:Bind Converter={StaticResource InitialNameStringConverter}}" VerticalAlignment="Center" TextAlignment="Center"/>
                                                </Grid>
                                                <TextBlock Text="{x:Bind FullName}" Grid.Column="1" VerticalAlignment="Bottom" Grid.Row="0"/>
                                                <TextBlock Text="{Binding ElementName=SearchDialogs, Path=DataContext.Dialogs.SearchQuery}"
                                                           VerticalAlignment="Top" 
                                                           Style="{StaticResource CaptionTextBlockStyle}" 
                                                           Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                                           TextTrimming="CharacterEllipsis" 
                                                           TextWrapping="NoWrap" 
                                                           Grid.Column="1"
                                                           Grid.Row="1"
                                                           MaxLines="1">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:UsernameHighlightBehavior SearchString="{Binding ElementName=SearchDialogs, Path=DataContext.Dialogs.SearchQuery}" HighlightBrush="{ThemeResource TelegramDialogLabelFromBrush}"/>
                                                    </i:Interaction.Behaviors>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </selectors:SearchTemplateSelector.ChannelForbiddenTemplate>
                                    <selectors:SearchTemplateSelector.MessageTemplate>
                                        <DataTemplate>
                                            <items:DialogListViewItem/>
                                        </DataTemplate>
                                    </selectors:SearchTemplateSelector.MessageTemplate>
                                </selectors:SearchTemplateSelector>
                            </ListView.ItemTemplateSelector>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Key}" Style="{StaticResource BaseTextBlockStyle}"/>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                    <GroupStyle.HeaderContainerStyle>
                                        <Style TargetType="ListViewHeaderItem">
                                            <Setter Property="Background" Value="{ThemeResource TelegramBackgroundSubtitleBarBrush}" />
                                            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
                                            <Setter Property="FontSize" Value="{ThemeResource ListViewHeaderItemThemeFontSize}" />
                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                            <Setter Property="Padding" Value="12,8,12,9"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="VerticalContentAlignment" Value="Top" />
                                            <Setter Property="MinHeight" Value="0"/>
                                            <Setter Property="UseSystemFocusVisuals" Value="True" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewHeaderItem">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Visibility="{Binding Content.Key, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource NullToVisibilityConverter}}">
                                                            <ContentPresenter x:Name="ContentPresenter"
                                                                              Margin="{TemplateBinding Padding}"
                                                                              Content="{TemplateBinding Content}"
                                                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.HeaderContainerStyle>
                                </GroupStyle>
                            </ListView.GroupStyle>
                        </ListView>
                    </Grid>
                </PivotItem>
                <PivotItem Loaded="PivotItem_Loaded" Header="Contacts">
                    <!--<PivotItem.Header>
                         <controls:TabHeaderStyle Glyph="&#xE125;"/>
                         </PivotItem.Header>-->
                    <ListView x:Name="UsersListView"
                              ItemsSource="{x:Bind ViewModel.Contacts.Items}"
                              Header="{x:Bind ViewModel.Contacts.Self, Mode=OneWay}"
                              SelectionChanged="UsersListView_SelectionChanged">
                        <ListView.HeaderTemplate>
                            <DataTemplate x:DataType="models:TLUser">
                                <Border Background="{ThemeResource TelegramBackgroundSubtitleBarBrush}">
                                    <Button Click="Self_Click" Style="{StaticResource EmptyButtonStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Background="{x:Bind Id, Converter={StaticResource BubblePlaceholderConverter}}" Height="48" Width="48" CornerRadius="24" Margin="12" Grid.RowSpan="2">
                                                <TextBlock Foreground="White" x:Name="InitialName" Text="{Binding Converter={StaticResource InitialNameStringConverter}}" VerticalAlignment="Center" TextAlignment="Center"/>
                                                <Ellipse>
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{x:Bind Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <Border BorderBrush="#26000000" BorderThickness="1" CornerRadius="32"/>
                                            </Grid>
                                            <TextBlock Text="{x:Bind FullName}" Style="{StaticResource BaseTextBlockStyle}" VerticalAlignment="Bottom" Grid.Column="1"/>
                                            <TextBlock Text="{x:Bind Phone}" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
                                        </Grid>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:TLUser">
                                <Grid Margin="0,6">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Background="{x:Bind Id, Converter={StaticResource BubblePlaceholderConverter}}" Width="36" Height="36" CornerRadius="18" Margin="0,0,12,0" Grid.RowSpan="2">
                                        <TextBlock Foreground="White" Text="{x:Bind Converter={StaticResource InitialNameStringConverter}}" VerticalAlignment="Center" TextAlignment="Center"/>
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{x:Bind Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Border BorderBrush="#26000000" BorderThickness="1" CornerRadius="24" Width="36" Height="36" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="1"/>
                                    </Grid>
                                    <TextBlock Text="{x:Bind FullName}" Grid.Column="1" VerticalAlignment="Bottom" Grid.Row="0"/>
                                    <TextBlock Text="{x:Bind Converter={StaticResource LastSeenConverter}}" 
                                               x:Phase="1"
                                               VerticalAlignment="Top" 
                                               Style="{StaticResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                               TextTrimming="CharacterEllipsis" 
                                               TextWrapping="NoWrap" 
                                               Grid.Column="1" 
                                               Grid.Row="1"
                                               MaxLines="1"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </PivotItem>
            </Pivot>
            
            <Border x:Name="Separator" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" IsHitTestVisible="False" HorizontalAlignment="Right" Grid.Row="1" Grid.RowSpan="2"/>

            <!-- Master - Command Bar -->
            <CommandBar x:Name="cmbarMaster" x:DeferLoadStrategy="Lazy" Visibility="Collapsed" Grid.Row="2">
                <!-- Commands visible on commandbar-->
                <CommandBar.PrimaryCommands>
                    <AppBarButton x:Name="cbtnMasterNewChat"
                                  x:Uid="CBTN-NewChat"
                                  IsEnabled="False"
                                  Icon="Add"
                                  Label="New chat" />
                    <AppBarButton x:Name="cbtnMasterSelect"
                                  x:Uid="CBTN-Select"
                                  IsEnabled="False"
                                  Icon="Bullets"
                                  Label="Select"
                                  Click="cbtnMasterSelect_Click" />
                    <!-- Selection Mode: Multiple buttons -->
                    <AppBarButton x:Name="cbtnMasterMuteSelected" 
                                  x:Uid="CBTN-MuteSelected"
                                  Icon="Mute"
                                  Label="Mute selected"
                                  Visibility="Collapsed" />
                    <AppBarButton x:Name="cbtnMasterDeleteSelected" 
                                  x:Uid="CBTN-DeleteSelected"
                                  Icon="Delete"
                                  Label="Delete selected chats"
                                  Visibility="Collapsed" />
                    <AppBarButton x:Name="cbtnCancelSelection"
                                  x:Uid="CBTN-Cancel"
                                  Visibility="Collapsed"
                                  Icon="Cancel"
                                  Label="Cancel"
                                  Click="cbtnCancelSelection_Click"/>
                </CommandBar.PrimaryCommands>

                <!-- Commands hidden in the ellipse-menu -->
                <CommandBar.SecondaryCommands>
                    <AppBarButton x:Name="cbtnMasterSettings"
                                  x:Uid="CBTN-Settings"
                                  Icon="Setting"
                                  Label="Settings"
                                  Click="cbtnMasterSettings_Click" />
                    <AppBarButton x:Name="cbtnMasterAbout"
                                  x:Uid="CBTN-About"
                                  Label="About"
                                  Click="cbtnMasterAbout_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE946;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>
        </Grid>
    </controls:MasterDetailView>
</Page>