<Page
    x:Class="Unigram.Views.SignIn.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Views"
    xmlns:cv="using:Unigram.Converters"
    xmlns:controls="using:Unigram.Controls"
    xmlns:models="using:Unigram.Core.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="OnLoaded"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Name="Countries" Source="{Binding Countries}" IsSourceGrouped="True"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <controls:ButtonPageHeader
            x:Name="Header"
            Command="{x:Bind ViewModel.SendCommand}"
            Text="{CustomResource YourPhone}"
            Glyph="&#xE10B;"/>

        <Grid x:Name="ContentPanel" Padding="12,20" MaxWidth="360" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="TitleLabel"
                Visibility="Collapsed"
                Text="{CustomResource YourPhone}"
                Style="{ThemeResource TitleTextBlockStyle}"/>
            <TextBlock
                Text="{CustomResource StartText}"
                Style="{StaticResource BodyTextBlockStyle}"
                Padding="0,8,0,16"
                Grid.Row="1"/>

            <ComboBox x:Uid="SignInPage_CountriesList"
                      ItemsSource="{Binding Countries}"
                      SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
                      Header="{CustomResource ChooseCountry}"
                      MinWidth="280"
                      HorizontalAlignment="Stretch"
                      Grid.Row="2">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="models:Country">
                        <TextBlock Style="{StaticResource BodyTextBlockStyle}">
                            <Run Text="{x:Bind DisplayName}"/>
                            <Run Text="+" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"/><Run Text="{x:Bind PhoneCode}" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Grid Margin="0,12,0,4" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- The user can enter their phone number here -->
                <controls:UpdateTextBox x:Name="PhoneCode"
                                        Text="{Binding PhoneCode, Mode=TwoWay}"
                                        Margin="0,0,8,0"
                                        Width="30"
                                        InputScope="TelephoneNumber"
                                        PlaceholderText="+"
                                        Style="{StaticResource InlinePlaceholderTextBoxStyle}"/>
                <controls:UpdateTextBox x:Name="PrimaryInput"
                                        Text="{Binding PhoneNumber, Mode=TwoWay}"
                                        MinWidth="200"
                                        InputScope="TelephoneNumber"
                                        IsTextPredictionEnabled="False"
                                        KeyDown="PhoneNumber_KeyDown"
                                        PlaceholderText="Enter your phone number"
                                        Grid.Column="1"/>

            </Grid>

            <ProgressBar IsIndeterminate="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Background="Transparent" Grid.Row="4"/>

            <Button x:Name="NextButton"
                    x:Uid="SignInPage_NextButton"
                    Command="{x:Bind ViewModel.SendCommand}"
                    Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    Content="Next"
                    Margin="0,4,0,8"
                    Grid.Row="5"
                    Visibility="Collapsed"/>

            <HyperlinkButton x:Uid="SignInPage_ProxySettingsButton"
                             Command="{x:Bind ViewModel.ProxyCommand}"
                             Content="Proxy Settings"
                             Grid.Row="6"/>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="DisplayModeStates">
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentPanel.VerticalAlignment" Value="Center" />
                        <Setter Target="Header.Visibility" Value="Collapsed"/>
                        <Setter Target="NextButton.Visibility" Value="Visible"/>
                        <Setter Target="TitleLabel.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Compact">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
