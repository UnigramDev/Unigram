                <!-- TODO: not the right way -->
                <Border Height="10" Visibility="{x:Bind (Visibility)IsFirst), Mode=OneWay}"/>

                <Grid ContextFlyout="{StaticResource StickerMenuFlyout}" Grid.Row="1">
                    <controls:ImageView
