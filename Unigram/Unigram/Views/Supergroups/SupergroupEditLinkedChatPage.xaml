<local:HostedPage
    x:Class="Unigram.Views.Supergroups.SupergroupEditLinkedChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Views"
    xmlns:microsoft="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="ChatTemplate">
            <Button Style="{StaticResource EmptyButtonStyle}">
                <Grid Margin="12,6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <controls:ProfilePicture IsEnabled="False" Width="36" Height="36" Margin="0,0,12,0" Grid.RowSpan="2"/>

                    <TextBlock
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis"
                        VerticalAlignment="Bottom"
                        Grid.Column="1"/>
                    <TextBlock
                        VerticalAlignment="Top"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap"
                        Grid.Column="1"
                        Grid.Row="1"
                        MaxLines="1"/>
                </Grid>
            </Button>
        </DataTemplate>
    </Page.Resources>

    <local:HostedPage.Header>
        <controls:PageHeader Text="{CustomResource Discussion}"/>
    </local:HostedPage.Header>
    
    <Grid Background="{ThemeResource PageBackgroundDarkBrush}">
        <microsoft:ItemsRepeaterScrollHost>
            <ScrollViewer
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto">
                <StackPanel Margin="0,0,0,24">
                    <StackPanel MaxWidth="640">
                        <controls:LottieView
                            Source="ms-appx:///Assets/Animations/DiscussionGroupSetup.tgs"
                            IsLoopingEnabled="False"
                            Width="140"
                            Height="140"
                            Margin="0,24,0,0"/>
                        <TextBlock
                            x:Name="Headline"
                            Text="{CustomResource DiscussionChannelGroupSetHelp}"
                            Style="{StaticResource InfoCaptionTextBlockStyle}"
                            TextAlignment="Center"
                            Margin="12,16,12,8"/>
                    </StackPanel>

                    <controls:HeaderedControl
                        x:Name="LayoutRoot"
                        Footer="{CustomResource DiscussionChannelHelp2}">

                        <controls:BadgeButton
                            x:Name="Create"
                            Content="{CustomResource DiscussionCreateGroup}"
                            Style="{StaticResource GlyphBadgeButtonStyle}"
                            Glyph="&#xE902;"/>

                        <microsoft:ItemsRepeater
                            Layout="{StaticResource ThreadStackLayout}"
                            ItemsSource="{x:Bind ViewModel.Items}"
                            ItemTemplate="{StaticResource ChatTemplate}"
                            ElementPrepared="OnElementPrepared"/>

                        <controls:BadgeButton
                            x:Name="Unlink"
                            Content="{CustomResource DiscussionUnlinkGroup}"
                            Command="{x:Bind ViewModel.UnlinkCommand}"
                            Style="{StaticResource GlyphBadgeButtonStyle}"
                            Glyph="&#xF166;"/>

                    </controls:HeaderedControl>
                </StackPanel>
            </ScrollViewer>
        </microsoft:ItemsRepeaterScrollHost>
    </Grid>
</local:HostedPage>
