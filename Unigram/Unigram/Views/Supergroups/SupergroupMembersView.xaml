<local:HostedPage x:Class="Unigram.Views.Supergroups.SupergroupMembersPage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="using:Unigram.Views"
                  xmlns:controls="using:Unigram.Controls"
                  xmlns:selectors="using:Unigram.Selectors"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <DrillInNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <UserControl.Resources>
        <DataTemplate x:Key="MemberTemplate">
            <Grid Padding="12,6"
                  Background="{ThemeResource SettingsItemBackground}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <controls:ProfilePicture IsEnabled="False"
                                         Width="36"
                                         Height="36"
                                         Margin="0,0,12,0"
                                         Grid.RowSpan="2" />

                <TextBlock TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           Grid.Column="1"
                           VerticalAlignment="Bottom"
                           Grid.Row="0" />

                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                           VerticalAlignment="Top"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap"
                           Grid.Column="1"
                           Grid.Row="1"
                           MaxLines="1" />

                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap"
                           Grid.Column="2"
                           Grid.RowSpan="2"
                           MaxLines="1" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <local:HostedPage.Header>
        <controls:ContentPageHeader x:Name="Header">
            <TextBox x:Name="SearchField"
                     PlaceholderText="{CustomResource ChannelSubscribers}"
                     Background="{ThemeResource PageBackgroundDarkBrush}"
                     BorderBrush="{ThemeResource PageBackgroundDarkBrush}"
                     PreventKeyboardDisplayOnProgrammaticFocus="True"
                     TextChanged="Search_TextChanged"
                     Margin="12,8" />
        </controls:ContentPageHeader>
    </local:HostedPage.Header>

    <Grid Background="{ThemeResource PageBackgroundDarkBrush}">
        <controls:TableListView ItemsSource="{x:Bind ViewModel.Search, Mode=OneWay}"
                                ItemTemplate="{StaticResource MemberTemplate}"
                                ItemClick="ListView_ItemClick"
                                IsItemClickEnabled="True"
                                ChoosingItemContainer="OnChoosingItemContainer"
                                ContainerContentChanging="OnContainerContentChanging"
                                SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem"
                       BasedOn="{StaticResource DefaultListViewItemStyle}">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </controls:TableListView>

        <Grid x:Name="ContentPanel"
              Background="{ThemeResource PageBackgroundDarkBrush}">
            <controls:TableListView x:Name="ScrollingHost"
                                    ItemsSource="{x:Bind ViewModel.Members, Mode=OneWay}"
                                    ItemClick="ListView_ItemClick"
                                    IsItemClickEnabled="True"
                                    ChoosingItemContainer="OnChoosingItemContainer"
                                    ContainerContentChanging="OnContainerContentChanging"
                                    SelectionMode="None"
                                    Grid.Row="1">
                <ListView.Header>
                    <Border x:Name="ListHeader">
                        <controls:HeaderedControl x:Name="AddNewPanel"
                                                  Visibility="Collapsed"
                                                  Margin="0,0,0,16">
                            <controls:BadgeButton x:Name="AddNew"
                                                  Content="{CustomResource AddSubscriber}"
                                                  Command="{x:Bind ViewModel.AddCommand}"
                                                  Style="{StaticResource GlyphBadgeButtonStyle}"
                                                  Glyph="&#xE8FA;" />
                        </controls:HeaderedControl>
                    </Border>
                </ListView.Header>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem"
                           BasedOn="{StaticResource DefaultListViewItemStyle}">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="MinHeight"
                                Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplateSelector>
                    <selectors:MemberTemplateSelector ItemTemplate="{StaticResource MemberTemplate}">
                        <selectors:MemberTemplateSelector.GroupTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Border Margin="-12,0"
                                        Background="{ThemeResource PageSubHeaderBackgroundBrush}">
                                    <TextBlock Text="{x:Bind}"
                                               Padding="12,0,0,0"
                                               Style="{StaticResource SettingsGroupTextBlockStyle}" />
                                </Border>
                            </DataTemplate>
                        </selectors:MemberTemplateSelector.GroupTemplate>
                    </selectors:MemberTemplateSelector>
                </ListView.ItemTemplateSelector>
                <ListView.Footer>
                    <Border MaxWidth="640">
                        <TextBlock x:Name="Footer"
                                   Text="{CustomResource ChannelMembersInfo}"
                                   Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Margin="12,8,12,32" />
                    </Border>
                </ListView.Footer>
            </controls:TableListView>
        </Grid>
    </Grid>
</local:HostedPage>
