                    <TextBlock Text="Unigram" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Style="{StaticResource BaseTextBlockStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Column="1"/>
                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1">
                        <Run Text="Version"/>
                        <Run x:Name="tblAppVersion" Text="{x:Bind ViewModel.Version, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>

                <TextBlock Text="Thank you for using Unigram! We wouldn't have been able to get this far without all help of the community."
                           TextWrapping="Wrap"
                           FontSize="14"
                           Margin="0,0,0,16"/>

                <!-- Useful links -->
                <Button Content="Privacy Policy"
                            Padding="0,4"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.UsefulPrivacyCommand}"/>
                <Button Content="Frequently Asked Questions"
                            Padding="0,4"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.UsefulFaqCommand}"/>
                <Button Content="Unigram Website"
                            Padding="0,4"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.UsefulWebsiteCommand}"/>
                <Button Content="Changelog"
                            Padding="0,4,0,12"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.UsefulChangelogCommand}"/>

                <!-- Support -->
                <TextBlock Margin="0,12,0,6"
                               Text="Support"
                               FontSize="20"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                <Grid Margin="0,0,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Content="Email"
                                Grid.Row="0"
                                Grid.Column="0"
                                Padding="0,4,8,4"
                                Style="{ThemeResource TextBlockButtonStyle}"
                                Command="{x:Bind ViewModel.SupportEmailCommand}"/>
                    <Button Content="Github"
                                Grid.Row="0"
                                Grid.Column="1"
                                Padding="16,4,8,4"
                                Style="{ThemeResource TextBlockButtonStyle}"
                                Command="{x:Bind ViewModel.SupportGitHubCommand}"/>
                </Grid>


                <!-- Social -->
                <TextBlock Margin="0,12,0,6"
                               Text="Social Media"
                               FontSize="20"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                <Button Content="Follow @UnigramApp on Twitter"
                            Padding="0,4"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.SocialTwitterCommand}"/>
                <Button Content="Like us on Facebook"
                            Padding="0,4,0,12"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.SocialFacebookCommand}"/>

                <!-- Special thanks -->
                <TextBlock Margin="0,12,0,6"
                               Text="Special thanks"
                               FontSize="20"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock Text="We want to especially thank these people for their help and knowledge while building Unigram:"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Margin="0,0,0,6"/>
                <Button Content="Telegram Desktop"
                            Padding="0,6"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.ThanksTelegramCommand}"/>
                <Button Content="Gregory Klyushnikov"
                            Padding="0,6,0,12"
                            Style="{ThemeResource TextBlockButtonStyle}"
                            Command="{x:Bind ViewModel.ThanksGregoryCommand}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>