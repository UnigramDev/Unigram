    <Grid Background="{ThemeResource PageBackgroundDarkBrush}"
          Margin="0,0,0,-24">
        <controls:TableListView x:Name="List"
                                ContainerContentChanging="OnContainerContentChanging"
                                SelectionMode="None"
                                Margin="-12,0,-24,0"
                                Padding="0,16,12,24">
            <ListView.Header>
                <Grid Margin="0,0,0,24">
                    <controls:StorageChart x:Name="Chart"
                                           Width="100"
                                           Height="100" />

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="SizeLabel"
                                   FontWeight="SemiBold"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   TextAlignment="Center" />
                        <TextBlock x:Name="UnitLabel"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <controls:FauxCheckBox Style="{StaticResource DefaultCheckBoxStyle}"
                                           Margin="0,6,0,6">
                        <StackPanel>
                            <TextBlock TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       Grid.Column="1"
                                       VerticalAlignment="Bottom"
                                       Grid.Row="0" />
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                       VerticalAlignment="Top"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       MaxLines="1" />
                        </StackPanel>
                    </controls:FauxCheckBox>
                </DataTemplate>
            </ListView.ItemTemplate>
        </controls:TableListView>

        <controls:ScrollViewerScrim Background="{ThemeResource PageBackgroundDarkBrush}"
                                    ScrollingHost="{x:Bind List}" />
    </Grid>
</controls:ContentPopup>
