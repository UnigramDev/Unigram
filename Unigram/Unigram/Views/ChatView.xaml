                    <LineBreak/>
                    <Run Text=""/>
                    <Run Text="{CustomResource ChatYourSelfDescription2}"/>
                    <LineBreak/>
                    <Run Text=""/>
                    <Run Text="{CustomResource ChatYourSelfDescription3}"/>
                    <LineBreak/>
                    <Run Text=""/>
                    <Run Text="{CustomResource ChatYourSelfDescription4}"/>
