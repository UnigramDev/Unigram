                                                <RotateTransform x:Name="Rotation" CenterX="8" CenterY="8" Angle="0"/>
                                            </Path.RenderTransform>
                                        </controls:ProgressBarRingSlice>
                                    </Grid>
                                </ControlTemplate>
                            </controls:ProgressBarRing.Template>
