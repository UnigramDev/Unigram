                            <Grid x:Name="RootGrid" CornerRadius="{TemplateBinding Radius}">
                                <TextBlock
                                    x:Name="ContentPresenter1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    AutomationProperties.AccessibilityView="Raw"/>
                                <TextBlock
                                    x:Name="ContentPresenter2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    AutomationProperties.AccessibilityView="Raw"/>
