    <SolidColorBrush x:Key="TelegramSecretChatForegroundBrush" Color="#00A629"/>

    <SolidColorBrush x:Key="TelegramDialogLabelStateBrush" Color="#64BC54"/>
    <SolidColorBrush x:Key="TelegramBackgroundAccentBrush" Color="{ThemeResource SystemAccentColor}"/>
    <SolidColorBrush x:Key="TelegramForegroundAccentBrush" Color="{ThemeResource SystemAccentColor}"/>
