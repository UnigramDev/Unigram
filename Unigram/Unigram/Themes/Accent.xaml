    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <StaticResource x:Key="ComboBoxPlaceHolderForeground" ResourceKey="TextControlPlaceholderForeground"/>

            <SolidColorBrush x:Key="PlaceholderForegroundHighBrush" Color="#3b3e45"/>
            <SolidColorBrush x:Key="PlaceholderForegroundLowBrush" Color="#545a68"/>
            <SolidColorBrush x:Key="PlaceholderBackgroundBrush" Color="#262a2d"/>

            <BitmapImage x:Key="DefaultBackgroundBrush" UriSource="ms-appx:///Assets/Images/DefaultBackground.theme-dark.png"/>

            <x:Boolean x:Key="IsDarkTheme">true</x:Boolean>
            
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <!--<SolidColorBrush x:Key="SystemControlHyperlinkTextBrush" Color="#000000"/>-->

            <StaticResource x:Key="ComboBoxPlaceHolderForeground" ResourceKey="TextControlPlaceholderForeground"/>

