                            AutomationProperties.AccessibilityView="Raw"/>
                        <TextBlock
                            x:Name="ContentPresenter2"
                            Foreground="{ThemeResource MessageMediaForegroundBrush}"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            AutomationProperties.AccessibilityView="Raw"/>

                        <controls:ProgressBarRing Width="20" Height="20" Background="Transparent" Foreground="{ThemeResource MessageMediaForegroundBrush}" Value="{TemplateBinding Progress}" IsHitTestVisible="False">
                            <controls:ProgressBarRing.Template>
                                <ControlTemplate TargetType="controls:ProgressBarRing">
                                    <Grid Background="{TemplateBinding Background}" CornerRadius="24">
                                        <controls:ProgressBarRingSlice x:Name="Indicator" CacheMode="BitmapCache" Stroke="{TemplateBinding Foreground}" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" InnerRadius="6" Radius="8" StartAngle="0" EndAngle="0">
