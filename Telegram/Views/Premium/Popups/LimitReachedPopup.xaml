<controls:ContentPopup x:Class="Telegram.Views.Premium.Popups.LimitReachedPopup"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:controls="using:Telegram.Controls"
                       mc:Ignorable="d"
                       Padding="0,24"
                       IsDismissButtonVisible="True">

    <Grid>
        <ListView x:Name="ScrollingHost"
                  IsItemClickEnabled="True"
                  ItemClick="OnItemClick"
                  ContainerContentChanging="OnContainerContentChanging"
                  SelectionMode="None"
                  Padding="12,0,12,56">
            <ListView.Header>
                <StackPanel Margin="12,0,12,0">
                    <Grid x:Name="LimitHeader"
                          HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid x:Name="LimitBubble"
                              Background="{StaticResource PremiumLinearGradientBrush}"
                              Padding="8,4"
                              CornerRadius="14"
                              MinWidth="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Icon"
                                       Foreground="#FFFFFF"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="20" />

                            <TextBlock x:Name="Limit"
                                       Margin="8,-1,8,1"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFFF"
                                       Grid.Column="1" />
                        </Grid>

                        <Path x:Name="NextArrow"
                              Data="M43.9999 0H29.5146C31.1059 0 32.632 0.6321 33.7573 1.7574L38.8786 6.8787C40.7685 8.7686 43.9999 7.4301 43.9999 4.7574V0Z"
                              Fill="#E46ACE"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Height="5"
                              Stretch="Uniform"
                              Grid.Row="1" />
                        <Path x:Name="PrevArrow"
                              Data="M36.9852 0H8.01465C9.60595 0 11.132 0.6321 12.2573 1.7574L19.6715 9.1716C21.2336 10.7337 23.7662 10.7337 25.3283 9.1716L32.7425 1.7574C33.8678 0.6321 35.3939 0 36.9852 0Z"
                              Fill="#976FFF"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Top"
                              Height="5"
                              Stretch="Uniform"
                              Grid.Row="1" />
                    </Grid>

                    <Grid x:Name="LimitPanel"
                          Margin="0,4,0,12"
                          Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Background="{ThemeResource ControlFillColorDefaultBrush}"
                              BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                              BorderThickness="1,1,0,1"
                              CornerRadius="4,0,0,4"
                              Padding="8,4">
                            <TextBlock Text="{CustomResource LimitFree}"
                                       FontWeight="SemiBold" />

                            <TextBlock x:Name="PrevLimit"
                                       FontWeight="SemiBold"
                                       Text="50"
                                       TextAlignment="Right" />
                        </Grid>
                        <Grid x:Name="NextPanel"
                              Background="{StaticResource PremiumLinearGradientBrush}"
                              CornerRadius="0,4,4,0"
                              Padding="8,4"
                              Grid.Column="1">
                            <TextBlock Text="{CustomResource LimitPremium}"
                                       Foreground="#FFFFFF"
                                       FontWeight="SemiBold" />

                            <TextBlock x:Name="NextLimit"
                                       Foreground="#FFFFFF"
                                       FontWeight="SemiBold"
                                       Text="100"
                                       TextAlignment="Right" />
                        </Grid>
                    </Grid>

                    <TextBlock x:Name="Subtitle"
                               Style="{StaticResource BodyTextBlockStyle}"
                               Grid.Row="2" />

                    <TextBlock x:Name="Header"
                               Text="{CustomResource YourPublicCommunities}"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Margin="0,24,0,2"
                               Grid.Row="2" />
                </StackPanel>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12,6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <controls:ProfilePicture Width="36"
                                                 Height="36"
                                                 Margin="0,0,12,0"
                                                 IsHitTestVisible="False"
                                                 Grid.RowSpan="2" />

                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Bottom"
                                   Grid.Row="0" />
                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                   VerticalAlignment="Top"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   MaxLines="1" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid x:Name="PurchasePanel"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Stretch"
              Margin="24,24,24,0"
              Grid.Row="1">
            <Rectangle x:Name="PurchaseShadow"
                       Loaded="PurchaseShadow_Loaded"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Fill="White"
                       Margin="0"
                       RadiusX="4"
                       RadiusY="4" />
            <Border Background="{StaticResource PremiumLinearGradientBrush}"
                    CornerRadius="4"
                    Height="32" />
            <controls:BadgeButton x:Name="PurchaseCommand"
                                  Click="Purchase_Click"
                                  Style="{StaticResource StartButtonStyle}"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Center"
                                  FontWeight="SemiBold"
                                  Padding="16,3,16,5"
                                  CornerRadius="4"
                                  Margin="0"
                                  Height="32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="PurchaseLabel"
                               VerticalAlignment="Center"
                               Margin="0,0,0,2" />

                    <controls:AnimatedImage x:Name="PurchaseIcon"
                                            Width="26"
                                            Height="26"
                                            IsCachingEnabled="False"
                                            FrameSize="26,26"
                                            DecodeFrameType="Logical"
                                            Margin="8,0,-4,0"
                                            Grid.Column="1" />
                </Grid>
            </controls:BadgeButton>
        </Grid>
    </Grid>
</controls:ContentPopup>
