<controls:ContentPopup x:Class="Telegram.Views.Premium.Popups.GiftPopup"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="using:Telegram.Views.Premium.Popups"
                       xmlns:controls="using:Telegram.Controls"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       mc:Ignorable="d"
                       Title="TITLE">

    <Grid Margin="0,0,0,-20">
        <ListView x:Name="ScrollingHost"
                  ContainerContentChanging="OnContainerContentChanging"
                  SelectionMode="None"
                  Margin="-24,0"
                  Padding="12,0">
            <ListView.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <controls:AnimatedImage Source="ms-appx:///Assets/Animations/Premium.tgs"
                                            IsCachingEnabled="False"
                                            AutoPlay="True"
                                            FrameSize="120,120"
                                            DecodeFrameType="Logical"
                                            Width="120"
                                            Height="120"
                                            Margin="0,16,0,0" />
                    <TextBlock x:Name="Subtitle"
                               Style="{StaticResource InfoCaptionTextBlockStyle}"
                               TextAlignment="Center"
                               Margin="12,8,12,24"
                               Grid.Row="2" />
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <RadioButton Style="{StaticResource SettingsRadioButtonStyle}"
                                 Checked="Option_Checked"
                                 HorizontalContentAlignment="Stretch"
                                 Background="Transparent">

                        <Grid Padding="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="Title"
                                       VerticalAlignment="Top"
                                       Grid.ColumnSpan="2" />

                            <Border x:Name="IconPanel"
                                    Margin="0,0,8,0"
                                    Padding="8,0,8,2"
                                    CornerRadius="4"
                                    Grid.Row="1">
                                <TextBlock x:Name="Icon"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="#FFFFFF"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>

                            <TextBlock x:Name="Subtitle"
                                       Style="{StaticResource InfoCaptionTextBlockStyle}"
                                       Grid.Column="1"
                                       Grid.Row="1" />

                            <TextBlock x:Name="Price"
                                       Style="{StaticResource InfoBodyTextBlockStyle}"
                                       VerticalAlignment="Center"
                                       Grid.Column="2"
                                       Grid.RowSpan="2" />
                        </Grid>
                    </RadioButton>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Footer>
                <StackPanel Margin="0,0,0,72">
                    <TextBlock x:Name="Footer"
                               Style="{StaticResource InfoCaptionTextBlockStyle}"
                               Margin="12,8,12,0" />
                </StackPanel>
            </ListView.Footer>
        </ListView>

        <controls:ScrollViewerScrim Background="{ThemeResource ContentDialogBackground}"
                                    ScrollingHost="{x:Bind ScrollingHost}" />

        <Grid x:Name="PurchasePanel"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Stretch"
              Margin="0,12,0,20"
              Grid.Row="1">
            <Rectangle x:Name="PurchaseShadow"
                       Loaded="PurchaseShadow_Loaded"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Fill="White"
                       Margin="0"
                       RadiusX="4"
                       RadiusY="4">
            </Rectangle>
            <Border Background="{StaticResource PremiumLinearGradientBrush}"
                    CornerRadius="4"
                    Height="36" />
            <controls:BadgeButton x:Name="PurchaseCommand"
                                  Click="Purchase_Click"
                                  Style="{StaticResource StartButtonStyle}"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Center"
                                  FontWeight="SemiBold"
                                  Padding="16,3,16,5"
                                  CornerRadius="4"
                                  Margin="0"
                                  Height="36" />
        </Grid>
    </Grid>
</controls:ContentPopup>
