<controls:ContentPopup x:Class="Telegram.Views.Premium.Popups.ChangePrivacyPopup"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:controls="using:Telegram.Controls"
                       mc:Ignorable="d"
                       Opened="OnOpened"
                       Padding="24,24,24,0"
                       IsDismissButtonVisible="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Border Background="{ThemeResource AccentButtonBackground}"
                    CornerRadius="48"
                    Width="96"
                    Height="96">
                <controls:AnimatedImage x:Name="Icon"
                                        AutoPlay="False"
                                        IsCachingEnabled="False"
                                        LoopCount="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FrameSize="72,72"
                                        DecodeFrameType="Logical"
                                        Width="72"
                                        Height="72" />
            </Border>

            <TextBlock x:Name="Title"
                       Style="{StaticResource PopupTextBlockStyle}"
                       TextAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,8,0,8" />

            <TextBlock x:Name="Subtitle"
                       TextAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Grid.Column="1"
                       Grid.Row="2" />

            <Grid x:Name="ChangePanel"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Stretch"
                  Margin="0,24,0,24"
                  Grid.Row="1">
                <controls:BadgeButton x:Name="ChangeCommand"
                                      Click="Change_Click"
                                      Style="{StaticResource AccentButtonStyle}"
                                      HorizontalAlignment="Stretch"
                                      HorizontalContentAlignment="Center"
                                      Typography.NumeralAlignment="Tabular"
                                      FontWeight="SemiBold"
                                      Padding="16,3,16,5"
                                      BorderThickness="0,0,0,1"
                                      CornerRadius="4"
                                      Margin="0"
                                      Height="32" />
            </Grid>
        </StackPanel>

        <StackPanel x:Name="SubscribeRoot"
                    x:Load="False"
                    Grid.Row="1">
            <Grid Margin="0,-4,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="{ThemeResource SettingsItemBorderBrush}"
                        BorderThickness="0,1,0,0"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center" />
                <TextBlock Text="{CustomResource PremiumOr}"
                           Style="{StaticResource InfoCaptionTextBlockStyle}"
                           Grid.Column="1" />
                <Border BorderBrush="{ThemeResource SettingsItemBorderBrush}"
                        BorderThickness="0,1,0,0"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Grid.Column="2" />
            </Grid>

            <TextBlock x:Name="SubscribeTitle"
                       Style="{StaticResource PopupTextBlockStyle}"
                       TextAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,8,0,8" />

            <TextBlock x:Name="SubscribeSubtitle"
                       TextAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Grid.Column="1"
                       Grid.Row="2" />

            <Grid x:Name="PurchasePanel"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Stretch"
                  Margin="0,24,0,24"
                  Grid.Row="1">
                <Rectangle x:Name="PurchaseShadow"
                           Loaded="PurchaseShadow_Loaded"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Fill="White"
                           Margin="0"
                           RadiusX="4"
                           RadiusY="4">
                </Rectangle>
                <Border Background="{StaticResource PremiumLinearGradientBrush}"
                        CornerRadius="4"
                        Height="32" />
                <controls:BadgeButton x:Name="PurchaseCommand"
                                      Click="Purchase_Click"
                                      Style="{StaticResource StartButtonStyle}"
                                      HorizontalAlignment="Stretch"
                                      HorizontalContentAlignment="Center"
                                      FontWeight="SemiBold"
                                      Padding="16,3,16,5"
                                      CornerRadius="4"
                                      Margin="0"
                                      Height="32" />
            </Grid>
        </StackPanel>
    </Grid>
</controls:ContentPopup>
