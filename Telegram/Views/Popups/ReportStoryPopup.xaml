<controls:ContentPopup x:Class="Telegram.Views.Popups.ReportStoryPopup"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="using:Telegram.Views.Popups"
                       xmlns:controls="using:Telegram.Controls"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       mc:Ignorable="d"
                       Padding="0"
                       IsDismissButtonVisible="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Margin="0,24,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  MinWidth="16" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <controls:GlyphButton x:Name="BackButton"
                                  Click="BackButton_Click"
                                  RenderTransformOrigin="0.5,0.5"
                                  VerticalAlignment="Bottom"
                                  Width="48"
                                  Height="48"
                                  Margin="4,-12,-8,-12"
                                  CornerRadius="20"
                                  Glyph="&#xe93e;"
                                  Visibility="Collapsed">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="0.8"
                                    ScaleY="0.8" />
                </Button.RenderTransform>
            </controls:GlyphButton>

            <TextBlock x:Name="Title"
                       Foreground="{ThemeResource PageHeaderForegroundBrush}"
                       Style="{StaticResource BaseTextBlockStyle}"
                       FontFamily="{ThemeResource EmojiThemeFontFamilyWithSymbols}"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       MaxLines="1"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       FontSize="20"
                       Grid.Column="1" />
        </Grid>

        <Grid x:Name="OptionRoot"
              Visibility="Collapsed"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock x:Name="Subtitle"
                       Style="{StaticResource BaseTextBlockStyle}"
                       Margin="24,0" />

            <controls:TextListView x:Name="ScrollingHost"
                                   SelectionMode="None"
                                   IsItemClickEnabled="True"
                                   ItemClick="OnItemClick"
                                   ContainerContentChanging="OnContainerContentChanging"
                                   Padding="12,6,12,12"
                                   Style="{StaticResource DefaultListViewStyle}"
                                   Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="12,0">
                            <TextBlock />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem"
                           BasedOn="{StaticResource DefaultListViewItemStyle}" />
                </ListView.ItemContainerStyle>
            </controls:TextListView>

            <controls:ScrollViewerScrim ScrollingHost="{x:Bind ScrollingHost}"
                                        Background="{ThemeResource ContentDialogBackground}"
                                        Grid.Row="1" />
        </Grid>

        <Grid x:Name="TextRoot"
              Visibility="Collapsed"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <controls:AnimatedImage x:Name="Animated"
                                    Source="ms-appx:///Assets/Animations/ReportText.tgs"
                                    Width="120"
                                    Height="120"
                                    FrameSize="120,120"
                                    DecodeFrameType="Logical"
                                    AutoPlay="False"
                                    LoopCount="1"
                                    Margin="0,-8,0,8" />
            <TextBox x:Name="Text"
                     TextChanged="Text_TextChanged"
                     Margin="24,0"
                     Grid.Row="1" />
            <TextBlock x:Name="TextInfo"
                       Style="{StaticResource InfoCaptionTextBlockStyle}"
                       Margin="24,8,24,0"
                       Grid.Row="2" />

            <Button x:Name="Send"
                    Click="Send_Click"
                    Content="{CustomResource Report2Send}"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Stretch"
                    Margin="24"
                    Grid.Row="3" />
        </Grid>
    </Grid>
</controls:ContentPopup>
