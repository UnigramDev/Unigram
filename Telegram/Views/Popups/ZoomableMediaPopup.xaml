<controls:GridEx x:Class="Telegram.Views.Popups.ZoomableMediaPopup"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:controls="using:Telegram.Controls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 Background="{ThemeResource SystemControlPageBackgroundMediumAltMediumBrush}"
                 IsHitTestVisible="False"
                 d:DesignHeight="300"
                 d:DesignWidth="400">

    <StackPanel VerticalAlignment="Center">
        <StackPanel.Resources>
            <Storyboard x:Key="Board">
                <DoubleAnimation Storyboard.TargetName="Transform"
                                 Storyboard.TargetProperty="CompositeTransform.ScaleX"
                                 From="0.8"
                                 To="1.0"
                                 Duration="0:0:0.5">
                    <DoubleAnimation.EasingFunction>
                        <ElasticEase Oscillations="1"
                                     Springiness="10"
                                     EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Storyboard.TargetName="Transform"
                                 Storyboard.TargetProperty="CompositeTransform.ScaleY"
                                 From="0.8"
                                 To="1.0"
                                 Duration="0:0:0.5">
                    <DoubleAnimation.EasingFunction>
                        <ElasticEase Oscillations="1"
                                     Springiness="10"
                                     EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </StackPanel.Resources>
        <TextBlock x:Name="Title"
                   TextAlignment="Center"
                   Margin="0,-40,0,20"
                   FontFamily="{ThemeResource EmojiThemeFontFamily}"
                   FontSize="22" />

        <Viewbox StretchDirection="DownOnly"
                 RenderTransformOrigin="0.5,0.5">
            <Viewbox.RenderTransform>
                <CompositeTransform x:Name="Transform" />
            </Viewbox.RenderTransform>
            <controls:AspectView x:Name="Aspect">
                <Image x:Name="Thumbnail" />
                <Border x:Name="Container" />
                <controls:ImageView x:Name="Texture" />
            </controls:AspectView>
        </Viewbox>
    </StackPanel>
</controls:GridEx>
