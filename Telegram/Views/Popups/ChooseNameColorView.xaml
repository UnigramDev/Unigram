<UserControl x:Class="Telegram.Views.Popups.ChooseNameColorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:common="using:Telegram.Common"
             xmlns:controls="using:Telegram.Controls"
             xmlns:chats="using:Telegram.Controls.Chats"
             xmlns:messages="using:Telegram.Controls.Messages"
             mc:Ignorable="d"
             Padding="0">

    <controls:HeaderedControl x:Name="NameColor">
        <Grid x:Name="Preview">
            <chats:ChatBackgroundControl x:Name="BackgroundControl" />
            <StackPanel Padding="0,10">
                <messages:MessageBubble x:Name="Message1"
                                        HorizontalAlignment="Left"
                                        Margin="8,0,12,0" />
            </StackPanel>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1" />
        </Grid>

        <GridView x:Name="List"
                  Background="{ThemeResource SettingsItemBackground}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="0,0,0,1"
                  SelectionMode="Single"
                  SelectionChanged="OnSelectionChanged"
                  ChoosingItemContainer="OnChoosingItemContainer"
                  ContainerContentChanging="OnContainerContentChanging"
                  ItemContainerTransitions="{x:Null}"
                  Padding="10,10,0,10"
                  common:FluidGridView.OrientationOnly="False"
                  common:FluidGridView.Padding="0,0,10,0"
                  Grid.Row="1">
            <common:FluidGridView.Triggers>
                <common:LengthGridViewTrigger ItemLength="40" />
            </common:FluidGridView.Triggers>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid SizeChanged="NameColor_SizeChanged"
                          Background="Blue"
                          CornerRadius="20">
                        <Polygon Points="40,0 40,40 0,40" />

                        <Rectangle Width="16"
                                   Height="16"
                                   RadiusX="2"
                                   RadiusY="2"
                                   RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="45" />
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem"
                       BasedOn="{StaticResource DefaultGridViewItemStyle}">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="Margin"
                            Value="2" />
                    <Setter Property="Padding"
                            Value="0" />
                    <Setter Property="MinWidth"
                            Value="0" />
                    <Setter Property="MinHeight"
                            Value="0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="GridViewItem">
                                <Grid x:Name="LayoutRoot">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="PointerOver">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicatorBorder.Opacity"
                                                            Value="0.8" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicatorBorder.Opacity"
                                                            Value="0.6" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicatorBorder.Opacity"
                                                            Value="1" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="PointerOverSelected">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicatorBorder.Opacity"
                                                            Value="1" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="PressedSelected">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicatorBorder.Opacity"
                                                            Value="1" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <ContentPresenter />

                                    <Ellipse x:Name="SelectionIndicatorBorder"
                                             Stroke="{ThemeResource ContentDialogBackground}"
                                             StrokeThickness="2"
                                             Margin="2"
                                             Opacity="0" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.Footer>
                <Border Width="12" />
            </GridView.Footer>
        </GridView>

        <Grid Grid.Row="2">
            <controls:BadgeButton x:Name="Badge"
                                  Click="Badge_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="BadgeText" />
                    <controls:BadgeControl x:Name="BadgeInfo"
                                           Visibility="Collapsed"
                                           Background="{ThemeResource PremiumLinearGradientBrush}"
                                           FontFamily="{StaticResource EmojiThemeFontFamilyWithSymbols}"
                                           VerticalAlignment="Bottom"
                                           Margin="4,0,0,0"
                                           Grid.Column="1" />
                </Grid>
            </controls:BadgeButton>
            <controls:AnimatedImage x:Name="Animated"
                                    FrameSize="20,20"
                                    DecodeFrameType="Logical"
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,16,0"
                                    IsHitTestVisible="False" />
        </Grid>
    </controls:HeaderedControl>
</UserControl>
