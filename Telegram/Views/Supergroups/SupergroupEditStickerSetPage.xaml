<local:HostedPage x:Class="Telegram.Views.Supergroups.SupergroupEditStickerSetPage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="using:Telegram.Views"
                  xmlns:common="using:Telegram.Common"
                  xmlns:controls="using:Telegram.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <SlideNavigationTransitionInfo Effect="FromRight" />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <local:HostedPage.Action>
        <Button Content="{CustomResource Save}"
                Click="{x:Bind ViewModel.Continue}"
                Style="{StaticResource AccentButtonStyle}" />
    </local:HostedPage.Action>

    <Grid Background="{ThemeResource SettingsPageBackground}">
        <controls:TableListView x:Name="ScrollingHost"
                                ItemsSource="{x:Bind ViewModel.Items}"
                                SelectedItem="{x:Bind ViewModel.ListSelectedItem, Mode=TwoWay}"
                                ContainerContentChanging="OnContainerContentChanging"
                                SelectionMode="Single">
            <ListView.Header>
                <controls:SettingsPanel IsHeader="True">
                    <controls:HeaderedControl Footer="{CustomResource ChooseStickerSetMy}">
                        <controls:PrefixTextBox x:Name="ShortName"
                                                Value="{x:Bind ViewModel.ShortName, Mode=TwoWay}"
                                                Prefix="t.me/addstickers/"
                                                PlaceholderText="{CustomResource ChooseStickerSetPlaceholder}"
                                                Margin="12,8,12,2" />

                        <Grid>
                            <Grid Visibility="{x:Bind ViewModel.SelectedItem, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ContentControl Content="{x:Bind ViewModel.SelectedItem, Mode=OneWay}"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Padding="12,0,0,0">
                                    <ContentControl.ContentTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,6"
                                                  Background="Transparent"
                                                  DataContextChanged="Grid_DataContextChanged">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Image Width="48"
                                                       Height="48"
                                                       Margin="0,0,12,0"
                                                       VerticalAlignment="Top"
                                                       Grid.RowSpan="2" />

                                                <TextBlock VerticalAlignment="Bottom"
                                                           Style="{StaticResource BaseTextBlockStyle}"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           Grid.Column="1" />
                                                <TextBlock Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                                           VerticalAlignment="Top"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           Grid.Column="1"
                                                           Grid.Row="1" />
                                            </Grid>
                                        </DataTemplate>
                                    </ContentControl.ContentTemplate>
                                </ContentControl>


                                <controls:GlyphButton Click="{x:Bind ViewModel.Cancel}"
                                                      FontSize="{StaticResource GlyphLargeFontSize}"
                                                      Glyph="&#xE711;"
                                                      VerticalAlignment="Center"
                                                      Width="40"
                                                      Height="40"
                                                      Margin="4"
                                                      CornerRadius="20"
                                                      Grid.Column="1" />
                            </Grid>

                            <Grid Margin="12,6,0,0"
                                  Visibility="{x:Bind ViewModel.IsAvailable, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"
                                  Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="&#9785;"
                                           IsColorFontEnabled="False"
                                           Width="48"
                                           Height="48"
                                           FontSize="36"
                                           TextAlignment="Center"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Top"
                                           Grid.RowSpan="2" />
                                <Image Width="48"
                                       Height="48"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Top"
                                       Grid.RowSpan="2" />

                                <TextBlock Text="{CustomResource ChooseStickerSetNotFound}"
                                           VerticalAlignment="Bottom"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           Grid.Column="1" />
                                <TextBlock Text="{CustomResource ChooseStickerSetNotFoundInfo}"
                                           Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                           VerticalAlignment="Top"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           Grid.Column="1"
                                           Grid.Row="1" />
                            </Grid>

                        </Grid>
                        <Grid Margin="12,6,0,6"
                              Background="Transparent"
                              Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Image Width="48"
                                   Height="48"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Top"
                                   Grid.RowSpan="2" />

                            <TextBlock Text="{CustomResource ChooseStickerSetNotFound}"
                                       VerticalAlignment="Bottom"
                                       Style="{StaticResource BaseTextBlockStyle}"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       Grid.Column="1" />
                            <TextBlock Text="{CustomResource ChooseStickerSetNotFoundInfo}"
                                       Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                                       VerticalAlignment="Top"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       Grid.Column="1"
                                       Grid.Row="1" />
                        </Grid>

                        <Border BorderBrush="{ThemeResource TelegramSeparatorMediumBrush}"
                                Margin="12,6,0,0"
                                BorderThickness="0,0,0,1" />
                    </controls:HeaderedControl>

                    <TextBlock Text="{CustomResource ChooseFromYourStickers}"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Margin="24,16,24,6" />
                </controls:SettingsPanel>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12,6"
                          Background="{ThemeResource SettingsItemBackground}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <controls:AnimatedImage x:Name="Player"
                                                AutoPlay="False"
                                                LimitFps="True"
                                                FrameSize="36,36"
                                                DecodeFrameType="Logical"
                                                Width="36"
                                                Height="36"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Top"
                                                Grid.RowSpan="2" />

                        <TextBlock VerticalAlignment="Bottom"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="1" />
                        <TextBlock Style="{StaticResource InfoCaptionTextBlockStyle}"
                                   VerticalAlignment="Top"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="1"
                                   Grid.Row="1" />

                        <TextBlock Text="&#xE9F6;"
                                   VerticalAlignment="Center"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16"
                                   Grid.Column="2"
                                   Grid.RowSpan="2" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </controls:TableListView>
    </Grid>
</local:HostedPage>
