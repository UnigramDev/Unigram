<local:HostedPage x:Class="Telegram.Views.Chats.ChatStoriesPage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="using:Telegram.Views"
                  xmlns:chats="using:Telegram.Controls.Chats"
                  xmlns:controls="using:Telegram.Controls"
                  xmlns:cells="using:Telegram.Controls.Cells"
                  xmlns:common="using:Telegram.Common"
                  xmlns:selectors="using:Telegram.Selectors"
                  xmlns:td="using:Telegram.Td.Api"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d"
                  NavigationMode="RootWhenParameterless"
                  Title="{x:Bind ViewModel.Title}">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <SlideNavigationTransitionInfo Effect="FromRight" />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{ThemeResource SettingsPageBackground}">
        <GridView x:Name="ScrollingHost"
                  ItemsSource="{x:Bind ViewModel.Items}"
                  ItemClick="List_ItemClick"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                  ChoosingItemContainer="OnChoosingItemContainer"
                  ContainerContentChanging="OnContainerContentChanging"
                  common:FluidGridView.MaxLength="1004"
                  Padding="24,0,20,0">
            <common:SelectedItemsBinder.Attached>
                <common:SelectedItemsBinder SelectionMode="Auto"
                                            SelectedItems="{x:Bind ViewModel.SelectedItems}"
                                            IsItemClickEnabled="True" />
            </common:SelectedItemsBinder.Attached>
            <common:FluidGridView.Triggers>
                <common:FluidGridViewTrigger MinLength="0"
                                             RowsOrColumns="3" />
                <common:FluidGridViewTrigger MinLength="600"
                                             RowsOrColumns="4" />
                <common:FluidGridViewTrigger MinLength="800"
                                             RowsOrColumns="5" />
            </common:FluidGridView.Triggers>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"
                                   MaxWidth="1008" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.Header>
                <controls:SettingsPanel>
                    <controls:HeaderedControl x:Name="Header"
                                              x:Load="{x:Bind ViewModel.IsPinned}"
                                              Footer="{CustomResource ProfileStoriesArchiveHint}"
                                              Margin="-24,0,-20,0">
                        <controls:BadgeButton Content="{CustomResource ProfileStoriesArchive}"
                                              Click="{x:Bind ViewModel.OpenArchive}"
                                              Style="{StaticResource GlyphBadgeButtonStyle}"
                                              Glyph="&#xE7B8;"
                                              IsChevronVisible="True" />
                    </controls:HeaderedControl>

                    <TextBlock x:Name="Hint"
                               x:Load="{x:Bind ViewModel.ShowHint, Mode=OneWay}"
                               Text="{CustomResource ProfileStoriesArchiveChannelHint}"
                               Style="{StaticResource InfoCaptionTextBlockStyle}"
                               Margin="0,16,0,8" />
                </controls:SettingsPanel>
            </GridView.Header>
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem"
                       BasedOn="{StaticResource DefaultGridViewItemStyle}">
                    <Setter Property="Margin"
                            Value="0,4,4,0" />
                    <Setter Property="Padding"
                            Value="0" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Stretch" />
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <cells:StoryCell />
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.Footer>
                <Border Height="60" />
            </GridView.Footer>
        </GridView>

        <Grid x:Name="ManagePanel"
              Background="{ThemeResource PageSubHeaderBackgroundBrush2}"
              VerticalAlignment="Bottom"
              Margin="24,8"
              CornerRadius="15"
              MaxWidth="1000"
              Visibility="Collapsed"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="15"
                    Grid.ColumnSpan="8" />

            <controls:GlyphButton Click="{x:Bind ViewModel.UnselectStories}"
                                  CornerRadius="13,4,4,13"
                                  Glyph="&#xE711;" />

            <controls:AnimatedTextBlock Text="{x:Bind ConvertSelected(ViewModel.SelectedItems.Count), Mode=OneWay}"
                                        TextStyle="{StaticResource BaseTextBlockStyle}"
                                        VerticalAlignment="Center"
                                        Margin="0,-2,0,0"
                                        Grid.Column="1" />


            <controls:GlyphButton Glyph="{x:Bind ConvertToggleIcon(ViewModel.IsPinned)}"
                                  Content="{x:Bind ConvertToggleText(ViewModel.IsPinned, ViewModel.SelectedItems.Count), Mode=OneWay}"
                                  IsEnabled="{x:Bind ViewModel.CanSelectedToggleIsPinned, Mode=OneWay}"
                                  Click="{x:Bind ViewModel.ToggleSelectedStories}"
                                  Style="{StaticResource GlyphButtonWithLabelStyle}"
                                  Grid.Column="3" />

            <controls:GlyphButton Glyph="&#xE74D;"
                                  Content="{CustomResource Delete}"
                                  IsEnabled="{x:Bind ViewModel.CanSelectedBeDeleted, Mode=OneWay}"
                                  Foreground="#df3f40"
                                  Click="{x:Bind ViewModel.DeleteSelectedStories}"
                                  Style="{StaticResource GlyphButtonWithLabelStyle}"
                                  CornerRadius="4,13,13,4"
                                  Grid.Column="4" />
        </Grid>

        <Grid x:Name="EmptyState"
              x:Load="{x:Bind ViewModel.IsEmpty, Mode=OneWay}"
              VerticalAlignment="Center"
              MaxWidth="1000"
              Margin="24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <controls:AnimatedImage Source="ms-appx:///Assets/Animations/MyStories.tgs"
                                    AutoPlay="True"
                                    IsCachingEnabled="False"
                                    DecodeFrameType="Logical"
                                    FrameSize="140,140"
                                    Width="140"
                                    Height="140"
                                    Margin="0,16,0,16" />
            <TextBlock common:TextBlockHelper.Markdown="{x:Bind ConvertEmptyTitle(ViewModel.IsPinned)}"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       TextAlignment="Center"
                       Margin="12,0,12,0"
                       Grid.Row="1" />
            <TextBlock common:TextBlockHelper.Markdown="{x:Bind ConvertEmptySubtitle(ViewModel.IsPinned)}"
                       Style="{StaticResource InfoCaptionTextBlockStyle}"
                       TextAlignment="Center"
                       Margin="12,0,12,0"
                       Grid.Row="2" />
        </Grid>
    </Grid>
</local:HostedPage>