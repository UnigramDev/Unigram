<Grid x:Class="Telegram.Controls.Cells.Revenue.StarTransactionCell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Telegram.Controls"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="400"
      Padding="12,8,8,8">

    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <controls:ProfilePicture x:Name="Photo"
                             VerticalAlignment="Top"
                             Width="36"
                             Height="36"
                             Margin="0,0,8,0"
                             Grid.RowSpan="3" />

    <Grid x:Name="MediaPreview"
          VerticalAlignment="Top"
          Width="36"
          Height="36"
          Margin="0,0,8,0"
          Grid.RowSpan="3">
        <Border x:Name="Media2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                CornerRadius="8"
                Width="32"
                Height="32" />
        <Border x:Name="Media1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                CornerRadius="8"
                Width="36"
                Height="36"
                BorderBrush="{ThemeResource ContentDialogBackground}"
                BorderThickness="2"
                Margin="-2" />
    </Grid>

    <controls:PremiumStarCount Width="24"
                               Height="24"
                               Grid.Column="4"
                               Grid.RowSpan="3" />

    <StackPanel x:Name="Subtracted"
                Orientation="Horizontal"
                Grid.Column="1">

    </StackPanel>

    <TextBlock x:Name="Title"
               TextWrapping="NoWrap"
               TextTrimming="CharacterEllipsis"
               Style="{StaticResource BaseTextBlockStyle}"
               VerticalAlignment="Top"
               Grid.Column="1" />

    <TextBlock x:Name="Subtitle"
               TextWrapping="NoWrap"
               TextTrimming="CharacterEllipsis"
               VerticalAlignment="Top"
               Grid.Column="1"
               Grid.Row="1" />

    <TextBlock x:Name="StarCount"
               Style="{StaticResource BaseTextBlockStyle}"
               VerticalAlignment="Center"
               Grid.Column="3"
               Grid.RowSpan="3" />

    <TextBlock x:Name="Date"
               Style="{StaticResource InfoCaptionTextBlockStyle}"
               Grid.Column="1"
               Grid.Row="2" />
</Grid>
