<UserControl x:Class="Telegram.Controls.Cells.PremiumGiftCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Telegram.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <UserControl.Resources>
        <SolidColorBrush x:Key="MessageReactionPaidBackgroundBrush"
                         Color="#40E8AB02" />
        <SolidColorBrush x:Key="MessageReactionPaidForegroundBrush"
                         Color="#FFBF7600" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Background="{ThemeResource SettingsItemBackground}"
                BorderBrush="{ThemeResource SettingsItemBorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Grid.RowSpan="4" />

        <controls:AnimatedImage x:Name="Animated"
                                Width="96"
                                Height="96"
                                FrameSize="96,96"
                                DecodeFrameType="Logical"
                                AutoPlay="False"
                                LoopCount="1"
                                IsViewportAware="True"
                                Margin="0,-12,0,0" />

        <TextBlock x:Name="Title"
                   TextAlignment="Center"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Grid.Row="1" />

        <TextBlock x:Name="Subtitle"
                   TextAlignment="Center"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Grid.Row="2" />

        <Grid x:Name="PriceRoot"
              Background="{ThemeResource MessageReactionBackgroundBrush}"
              HorizontalAlignment="Center"
              Height="24"
              CornerRadius="12"
              Margin="0,4,0,12"
              Grid.Row="3">
            <TextBlock x:Name="Price"
                       Foreground="{ThemeResource MessageReactionForegroundBrush}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       FontWeight="SemiBold"
                       Typography.NumeralAlignment="Tabular"
                       VerticalAlignment="Center"
                       Margin="8,1,8,2"
                       Grid.Column="1" />
        </Grid>

        <Grid x:Name="RibbonRoot"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="0,-1,-1,0"
              Width="62"
              Height="62">
            <Path Data="M59.6569 31.1569L30.8431 2.34315C29.3429 0.842855 27.308 0 25.1863 0H2.82843C1.04662 0 0.154282 2.15428 1.41421 3.41421L58.5858 60.5858C59.8457 61.8457 62 60.9534 62 59.1716V36.8137C62 34.692 61.1571 32.6571 59.6569 31.1569Z">
                <Path.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="#6ED2FF"
                                      Offset="0" />
                        <GradientStop Color="#35A5FC"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>

            <Border Width="62"
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    Margin="0,-14,-14,0">
                <Border.RenderTransform>
                    <RotateTransform Angle="45" />
                </Border.RenderTransform>
                <TextBlock x:Name="Ribbon"
                           Foreground="#FFFFFF"
                           TextAlignment="Center"
                           FontSize="12" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
