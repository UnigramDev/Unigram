<UserControl x:Class="Telegram.Controls.Cells.ChatBoostFeaturesCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Telegram.Controls.Cells"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid Margin="0,0,0,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Margin="0,0,0,8"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="{ThemeResource SettingsItemBorderBrush}"
                    BorderThickness="0,1,0,0"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center" />
            <Border Background="{StaticResource PremiumLinearGradientBrush}"
                    Height="24"
                    CornerRadius="12"
                    Grid.Column="1">
                <TextBlock x:Name="Level"
                           Foreground="#FFFFFF"
                           VerticalAlignment="Center"
                           Margin="8,1,8,3" />
            </Border>
            <Border BorderBrush="{ThemeResource SettingsItemBorderBrush}"
                    BorderThickness="0,1,0,0"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Grid.Column="2" />
        </Grid>
        <TextBlock x:Name="StoriesIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="1" />
        <TextBlock x:Name="StoriesText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="1" />

        <TextBlock x:Name="ReactionsIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="2" />
        <TextBlock x:Name="ReactionsText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="2" />

        <TextBlock x:Name="NameColorsIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="3" />
        <TextBlock x:Name="NameColorsText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="3" />

        <TextBlock x:Name="StylesIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="4" />
        <TextBlock x:Name="StylesText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="4" />

        <TextBlock x:Name="NameIconsIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="5" />
        <TextBlock x:Name="NameIconsText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="5" />

        <TextBlock x:Name="EmojiStatusIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="6" />
        <TextBlock x:Name="EmojiStatusText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="6" />

        <TextBlock x:Name="ProfileColorsIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="7" />
        <TextBlock x:Name="ProfileColorsText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="7" />

        <TextBlock x:Name="ProfileIconsIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="8" />
        <TextBlock x:Name="ProfileIconsText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="8" />

        <TextBlock x:Name="BackgroundsIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="9" />
        <TextBlock x:Name="BackgroundsText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="9" />

        <TextBlock x:Name="CustomBackgroundIcon"
                   Text="&#xF164;"
                   Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   Margin="0,0,8,0"
                   FontSize="20"
                   Grid.Row="10" />
        <TextBlock x:Name="CustomBackgroundText"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Grid.Column="1"
                   Grid.Row="10" />
    </Grid>
</UserControl>
