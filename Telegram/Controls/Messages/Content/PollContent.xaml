<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:Telegram.Controls.Messages.Content"
                    xmlns:controls="using:Telegram.Controls"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d"
                    d:DesignHeight="300"
                    d:DesignWidth="400">

    <Style TargetType="local:PollContent">
        <Setter Property="MinWidth"
                Value="220" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PollContent">
                    <StackPanel>
                        <Grid Margin="10,0,10,0">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState x:Name="RunningOut">
                                        <VisualState.Setters>
                                            <Setter Target="Timeout.Foreground"
                                                    Value="{ThemeResource MessagePollWrongBrush}" />
                                            <Setter Target="TimeoutGlyph.Foreground"
                                                    Value="{ThemeResource MessagePollWrongBrush}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Default" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel VerticalAlignment="Top">
                                <RichTextBlock x:Name="QuestionText"
                                               TextWrapping="Wrap"
                                               Style="{StaticResource BaseRichTextBlockStyle}"
                                               FontFamily="{ThemeResource EmojiThemeFontFamily}"
                                               IsTextSelectionEnabled="False">
                                    <Paragraph x:Name="Question" />
                                </RichTextBlock>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="Type"
                                               Foreground="{ThemeResource MessageSubtleForegroundBrush}"
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               VerticalAlignment="Top"
                                               Margin="0,0,4,4" />

                                    <controls:RecentUserHeads x:Name="RecentVoters"
                                                              BorderBrush="{ThemeResource MessageBackgroundBrush}"
                                                              ItemSize="18"
                                                              ItemOverlap="6"
                                                              Margin="0,0,0,-6" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel x:Name="TimeoutLabel"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Bottom"
                                        Margin="10,0,0,4"
                                        Grid.Column="1">
                                <TextBlock x:Name="Timeout"
                                           Foreground="{ThemeResource MessageSubtleForegroundBrush}"
                                           Style="{StaticResource BodyTextBlockStyle}" />

                                <TextBlock x:Name="TimeoutGlyph"
                                           Text="&#xE916;"
                                           FontSize="{StaticResource GlyphMediumFontSize}"
                                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                                           Foreground="{ThemeResource MessageSubtleForegroundBrush}"
                                           TextLineBounds="Tight"
                                           VerticalAlignment="Bottom"
                                           Margin="4,0,0,2" />
                            </StackPanel>

                            <controls:GlyphButton x:Name="Explanation"
                                                  Glyph="&#xEA80;"
                                                  Foreground="{ThemeResource MessageSubtleForegroundBrush}"
                                                  Margin="0,-4,-10,-5"
                                                  Grid.Column="1" />
                        </Grid>

                        <StackPanel x:Name="Options" />

                        <TextBlock x:Name="Votes"
                                   Foreground="{ThemeResource MessageSubtleForegroundBrush}"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   Margin="0,12,0,4" />

                        <Button x:Name="Submit"
                                Style="{StaticResource ListEmptyButtonStyle}"
                                HorizontalAlignment="Center"
                                CornerRadius="4"
                                Margin="0,8,0,0">
                            <TextBlock Text="{CustomResource PollSubmitVotes}"
                                       Foreground="{ThemeResource MessageSubtleForegroundBrush}"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="8,4,8,4" />
                        </Button>

                        <Button x:Name="View"
                                Style="{StaticResource ListEmptyButtonStyle}"
                                HorizontalAlignment="Center"
                                CornerRadius="4"
                                Margin="0,8,0,0">
                            <TextBlock Text="{CustomResource PollViewResults}"
                                       Foreground="{ThemeResource MessageSubtleForegroundBrush}"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="8,4,8,4" />
                        </Button>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
